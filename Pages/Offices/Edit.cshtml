@page
@model NLI_POS.Pages.Offices.EditModel

@{
    ViewData["Title"] = "Edit Office Details";
}
<div class="container-fluid bg-white bg-gradient shadow px-4 py-4" style="max-width: 600px; width: 100%;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="text-primary mb-0">
            <i class="fa-solid fa-building me-2"></i> @ViewData["Title"]
        </h4>
        <i class="fas fa-window-close fa-2xl text-danger" role="button" title="Close" onclick="window.location = './Index';"></i>
    </div>
    <hr />
    <form method="post" onsubmit="return validateAndShowLoader(this)">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="OfficeCountry.Id" />

        <div class="row g-2">
            <div class="col-md-12 mb-3">
                <label asp-for="OfficeCountry.CountryId" class="form-label"></label>
                <select asp-for="OfficeCountry.CountryId" class="form-control form-select" asp-items="ViewBag.CountryId"></select>
                <span asp-validation-for="OfficeCountry.CountryId" class="text-danger"></span>
            </div>
        </div>
        <div class="row g-2">
            <div class="col-md-9 mb-3">
                <label asp-for="OfficeCountry.Name" class="form-label"></label>
                <input asp-for="OfficeCountry.Name" class="form-control" />
                <span asp-validation-for="OfficeCountry.Name" class="text-danger"></span>
            </div>
            <div class="col-md-3 mb-3">
                <label asp-for="OfficeCountry.OffCode" class="form-label">Office Code</label>
                <input asp-for="OfficeCountry.OffCode" class="form-control" />
                <span asp-validation-for="OfficeCountry.OffCode" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="OfficeCountry.Address" class="form-label"></label>
            <textarea asp-for="OfficeCountry.Address" class="form-control" rows="2"></textarea>
            <span asp-validation-for="OfficeCountry.Address" class="text-danger"></span>
        </div>

        <div class="row g-2">
            <div class="col-md-6 mb-3">
                <label asp-for="OfficeCountry.Email" class="form-label"></label>
                <input asp-for="OfficeCountry.Email" class="form-control" />
                <span asp-validation-for="OfficeCountry.Email" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="OfficeCountry.ContactNo" class="form-label"></label>
                <input asp-for="OfficeCountry.ContactNo" class="form-control" />
                <span asp-validation-for="OfficeCountry.ContactNo" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="OfficeCountry.Remarks" class="form-label"></label>
            <textarea asp-for="OfficeCountry.Remarks" class="form-control" rows="2"></textarea>
            <span asp-validation-for="OfficeCountry.Remarks" class="text-danger"></span>
        </div>

        <div class="form-check form-switch mb-3">
            <input class="form-check-input" asp-for="OfficeCountry.isActive" />
            <label class="form-check-label" asp-for="OfficeCountry.isActive"></label>
        </div>

        <!-- Hidden fields -->
        @* You can keep these hidden *@
        <input type="hidden" asp-for="OfficeCountry.EncodeDate" />
        <input type="hidden" asp-for="OfficeCountry.EncodedBy" />
        <input type="hidden" asp-for="OfficeCountry.UpdateDate" />
        <input type="hidden" asp-for="OfficeCountry.UpdatedBy" />

        <div class="text-end">
            <button type="submit" class="btn btn-primary">
                <i class="far fa-save me-2"></i> Save
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
