@page
@model NLI_POS.Pages.Offices.IndexModel

@{
    ViewData["Title"] = "Offices";
}
<div class="container-fluid bg-white bg-gradient  shadow p-2">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0 text-primary">
            <i class="fa-solid fa-building me-2"></i> @ViewData["Title"]
        </h4>
        <i class="fas fa-window-close fa-2xl text-danger" role="button" title="Close" onclick="window.location = '../Index';"></i>
    </div>
    <hr />

    <p>
        <a class="btn btn-primary" asp-page="Create"><i class="fas fa-plus-square"></i> Add New</a>
    </p>
    <table id="officeCountryTable" class="table table-sm table-striped table-bordered align-middle">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.OfficeCountry[0].Name)</th>
                <th>@Html.DisplayNameFor(model => model.OfficeCountry[0].Country)</th>
                <th>@Html.DisplayNameFor(model => model.OfficeCountry[0].Email)</th>
                <th>@Html.DisplayNameFor(model => model.OfficeCountry[0].ContactNo)</th>
                <th>@Html.DisplayNameFor(model => model.OfficeCountry[0].isActive)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OfficeCountry)
            {
                <tr>
                    <td class="align-middle">@Html.DisplayFor(modelItem => item.Name)</td>
                    <td class="align-middle">@Html.DisplayFor(modelItem => item.Country.Name)</td>
                    <td class="align-middle">@Html.DisplayFor(modelItem => item.Email)</td>
                    <td class="align-middle">@Html.DisplayFor(modelItem => item.ContactNo)</td>
                    <td class="align-middle">
                        @if (item.isActive)
                        {
                            <span class="badge bg-success opacity-75">Yes</span>

                        }
                        else
                        {
                            <span class="badge bg-secondary opacity-50">Yes</span>
                        }
                    </td>
                    <td class="align-middle">
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm" title="Edit">
                            <i class="far fa-edit"></i>
                        </a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm" title="Details">
                            <i class="fas fa-info-circle"></i>
                        </a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Delete">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#officeCountryTable').DataTable({
                responsive: true,
                autoWidth: false
            });
        });
    </script>
}