@page
@model NLI_POS.Pages.Offices.DetailsModel

@{
    ViewData["Title"] = "Office Details";
}

<div class="container-fluid px-4 py-3 w-75">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header d-flex justify-content-between align-items-center rounded-top-4">
            <h4 class="mb-0">
                <i class="fa-solid fa-building me-2"></i> @ViewData["Title"]
            </h4>
            <button class="btn btn-sm btn-light text-danger" title="Close" onclick="window.location='./Index'">
                <i class="fas fa-window-close fa-2xl text-danger"></i>
            </button>
        </div>

        <div class="card-body">
            <div class="row g-3">

                <div class="col-md-8">
                    <label class="fw-semibold text-secondary">Office Code</label>
                    <div class="form-control bg-light">@Model.OfficeCountry.OffCode</div>
                </div>

                <div class="col-md-4">
                    <label class="fw-semibold text-secondary">Active</label><br/>
                    <span class="badge @(Model.OfficeCountry.isActive ? "bg-success" : "bg-danger")">
                        @(Model.OfficeCountry.isActive ? "Yes" : "No")
                    </span>

                </div>

                <div class="col-md-8">
                    <label class="fw-semibold text-secondary">Office Name</label>
                    <div class="form-control bg-light">@Model.OfficeCountry.Name</div>
                </div>

                <div class="col-md-4">
                    <label class="fw-semibold text-secondary">Country</label>
                    <div class="form-control bg-light">@Model.OfficeCountry.Country?.Name &nbsp;</div>
                </div>

                <div class="col-md-8">
                    <label class="fw-semibold text-secondary">Address</label>
                    <div class="form-control bg-light">@Model.OfficeCountry.Address</div>
                </div>

                <div class="col-md-4">
                    <label class="fw-semibold text-secondary">Remarks</label>
                    <textarea class="form-control bg-light" rows="2" readonly>@Model.OfficeCountry.Remarks</textarea>

                </div>

                <div class="col-md-8">
                    <label class="fw-semibold text-secondary">Email</label>
                    <div class="form-control bg-light">@Model.OfficeCountry.Email</div>
                </div>

                <div class="col-md-4">
                    <label class="fw-semibold text-secondary">Contact No</label>
                    <div class="form-control bg-light">@Model.OfficeCountry.ContactNo</div>
                </div>
                <hr/>
                <div class="col-md-3">
                    <label class="fw-semibold text-secondary">Encoded By</label>
                    <div class="form-control bg-light">@Model.OfficeCountry.EncodedBy</div>
                </div>

                <div class="col-md-3">
                    <label class="fw-semibold text-secondary">Encode Date</label>
                    <div class="form-control bg-light">
                        @Model.OfficeCountry?.EncodeDate?.ToString("yyyy-MM-dd") ?? ""
                    </div>
                </div>

                <div class="col-md-3">
                    <label class="fw-semibold text-secondary">Updated By</label>
                    <div class="form-control bg-light">@Model.OfficeCountry.UpdatedBy &nbsp;</div>
                </div>

                <div class="col-md-3">
                    <label class="fw-semibold text-secondary">Update Date</label>
                    <div class="form-control bg-light">@Model.OfficeCountry.UpdateDate?.ToString("yyyy-MM-dd")&nbsp;</div>
                </div>

            </div>
        </div>

        <div class="card-footer bg-light d-flex justify-content-between rounded-bottom-4">
            <a asp-page="./Index" class="btn btn-outline-secondary">
                <i class="fas fa-chevron-left"></i> Back to List
            </a>
            <a asp-page="./Edit" asp-route-id="@Model.OfficeCountry.Id" class="btn btn-outline-primary">
                <i class="fas fa-edit"></i> Edit Office
            </a>
        </div>
    </div>
</div>
