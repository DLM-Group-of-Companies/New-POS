@page
@model NLI_POS.Pages.Orders.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid bg-white bg-gradient  shadow p-2">
    <span class="float-end" title="Close"><i class="fas fa-window-close fa-2xl text-danger" onclick="window.location = './Index';"></i> </span>
    <h4><i class="fas fa-cart-plus"></i> New Order</h4>
    <hr />
    <form method="post" id="myForm">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger small bg-danger text-white p-2 bg-opacity-75 mb-2"></div>

        <div class="row">
            <!-- Left Panel -->
            <div class="col-lg-4">
                <!-- Office Info -->
                <div class="p-3 bg-light border rounded shadow-sm mb-2">
                    <h5 class="text-secondary border-bottom pb-1 mb-2">
                        <i class="fas fa-building text-primary"></i> Office Info
                    </h5>
                    <input type="hidden" asp-for="Order.OrderNo" />
                    <div class="row">
                        <div class="col-6 mb-2">
                            <label asp-for="Order.OfficeId" class="form-label"></label>
@*                             <select id="OfficeId" asp-for="Order.OfficeId" class="form-select">
                                @foreach (var office in Model.OfficeList)
                                {
                                    <option value="@office.Value"
                                            data-locale="@office.Locale"
                                            data-currency="@office.CurrencyCode">
                                        @office.Text
                                    </option>
                                }
                            </select> *@
                        </div>
                        <div class="col-6 mb-2">
                            <label asp-for="Order.OrderDate" class="form-label"></label>
                            <input asp-for="Order.OrderDate" class="form-control" value="@DateTime.UtcNow.AddHours(8).ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="Order.OrderDate" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- Customer Info -->
                <div class="p-3 bg-light border rounded shadow-sm mb-2">
                    <h5 class="text-secondary border-bottom pb-1 mb-2">
                        <i class="fas fa-user text-success"></i> Customer Info
                    </h5>
                    <label asp-for="Order.CustomerId" class="form-label"></label>
                    <div class="input-group mb-2">
                        <select asp-for="Order.CustomerId" id="CustomerId" class="form-select" asp-items="ViewBag.CustomerId">
                            <option value="">-- Select Customer--</option>
                        </select>
                        <button class="btn btn-primary" type="button" onclick="openCustomerSearchModal()"><i class="fas fa-search"></i></button>
                    </div>
                    <div class="mb-2">
                        <span id="CustClassDisplay" class="badge bg-success"></span>
                        <input id="Order_CustClass" name="Order.CustClass" type="hidden" />
                    </div>
                    <span asp-validation-for="Order.CustomerId" class="text-danger small"></span>
                </div>

                <!-- Product Selection -->
                <div class="p-3 bg-light border rounded shadow-sm mb-2">
                    <h5 class="text-secondary border-bottom pb-1 mb-2">
                        <i class="fas fa-box text-info"></i> Product Selection
                    </h5>
                    <div class="row">
                        <div class="col-4 mb-2">
                            <label class="form-label">Category</label>
                            <select id="ProductCategory" class="form-select">
                                <option value="Regular">Regular</option>
                                <option value="Promo">Promo</option>
                                <option value="Freebie">Freebie</option>
                            </select>
                        </div>
                        <div class="col-8 mb-2">
                            <label class="form-label">Product</label>
                            <select id="ProductId" class="form-select" asp-items="ViewBag.ProductId"></select>
                        </div>
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Combo (if applicable)</label>
                        <select id="ComboId" class="form-select" asp-items="ViewBag.ProductCombos"></select>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-2">
                            <label class="form-label">Qty</label>
                            <input id="Qty" type="number" class="form-control" />
                        </div>
                        <div class="col-md-8 mb-2">
                            <label class="form-label">Amount</label>
                            <input id="Amount" type="text" class="form-control fw-bold" readonly />
                        </div>
                    </div>
                    <input id="Price" type="hidden" />
                    <div class="d-flex justify-content-end">
                        <button type="button" class="btn btn-primary" onclick="addProduct()">
                            <i class="fas fa-cart-plus me-2"></i> Add to Cart
                        </button>
                    </div>
                </div>
            </div>

            <!-- Right Panel -->
            <div class="col-lg-8">
                <!-- Cart Section -->
                <div class="p-3 bg-light border rounded shadow-sm mb-2">
                    <h5 class="text-dark border-bottom pb-1 mb-2">
                        <i class="fas fa-shopping-cart text-secondary"></i> Cart
                    </h5>
                    <div class="table-responsive">
                        <table id="cartTable" class="table table-bordered table-sm small align-middle">
                            <thead class="table-secondary">
                                <tr>
                                    <th>Product Items</th>
                                    <th>Product Combo</th>
                                    <th>Price</th>
                                    <th>Qty</th>
                                    <th>Amount</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                              @*   @if (Model.SelectedProducts.Any())
                                {
                                    foreach (var item in Model.SelectedProducts)
                                    {
                                        <tr>
                                            <td>@item.ProductName</td>
                                            <td>@item.ComboName</td>
                                            <td>@item.Price.ToString("N2")</td>
                                            <td>@item.Quantity</td>
                                            <td>@(item.Price * item.Quantity).ToString("N2")</td>
                                            <td><button class="btn btn-sm btn-danger" onclick="removeFromCart(@item.ProductId)"><i class="fas fa-trash"></i></button></td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="6" class="text-center text-muted">No items in cart.</td></tr>
                                } *@
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Total Amount Due</th>
                                    <td colspan="3"></td>
                                    <td><strong><span id="grandTotal">0</span></strong></td>
                                    <td></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>

                <!-- Payment Section -->
                <div class="p-3 bg-light border rounded shadow-sm mb-2">
                    <h5 class="text-secondary border-bottom pb-1 mb-2">
                        <i class="fas fa-credit-card text-warning"></i> Payment
                    </h5>
                    <select id="paymentOptionsSource" class="d-none">
                        @foreach (var method in ViewBag.PaymentMethod as SelectList)
                        {
                            <option value="@method.Value">@method.Text</option>
                        }
                    </select>
                    <table class="table table-sm" id="paymentTable">
                        <thead>
                            <tr>
                                <th>Method</th>
                                <th>Amount</th>
                                <th>Ref No.</th>
                                <th colspan="2"></th>
                            </tr>
                        </thead>
                        <tbody id="paymentTableBody">
                            <tr>
                                <td>
                                    <select name="Payments[0].PayMethod" class="form-select">
                                        @foreach (var method in ViewBag.PaymentMethod as SelectList)
                                        {
                                            <option value="@method.Value">@method.Text</option>
                                        }
                                    </select>
                                </td>
                                <td>
                                    <input type="number" name="Payments[0].Amount" class="form-control payment-amount" />
                                </td>
                                <td>
                                    <input type="text" name="Payments[0].RefNo" class="form-control" />
                                </td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-danger" title="Delete" onclick="removePaymentRow(this)">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-warning text-white" title="Add" onclick="addPaymentRow()">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div id="paymentError" class="text-danger small mb-2" style="display:none;"></div>

                    <div class="mb-2">
                        <label asp-for="Order.Notes" class="form-label"></label>
                        <textarea asp-for="Order.Notes" class="form-control" rows="3"></textarea>
                    </div>
                </div>

                <div class="d-flex justify-content-end pt-3">
                    <button type="submit" class="btn btn-success">
                        <i class="fa-solid fa-share me-2"></i> Place Order
                    </button>
                </div>
            </div>
        </div>
    </form>


    <div>
        <a asp-page="Index">Back to List</a>
    </div>

    <!-- Customer Search Modal -->
    <div class="modal fade" id="customerSearchModal" tabindex="-1" aria-labelledby="customerSearchLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Search Customer</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="text" id="customerSearchInput" class="form-control mb-3" placeholder="Enter name, customer ID, email, mobile..." />

                    <table class="table table-sm table-hover table-bordered small">
                        <thead>
                            <tr>
                                <th>Customer ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Mobile</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="customerSearchResults">
                            <!-- Results injected here -->

                        </tbody>
                        <tfoot>
                        </tfoot>
                    </table>
                    <a asp-page="/Customers/Create" type="button" class="btn btn-primary float-end"><i class="fas fa-user-plus"></i> New Customer</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
