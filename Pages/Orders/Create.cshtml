@model NLI_POS.Pages.Orders.CreateModel

@{
    ViewData["Title"] = "Create";
}
<div class="container-fluid bg-white bg-gradient  shadow p-2">
    <span class="float-end" title="Close"><i class="fas fa-window-close fa-2xl text-danger" onclick="window.location = './Index';"></i> </span>
    <h4><i class="fas fa-cart-plus"></i> New Order</h4>
    <hr />
    <form method="post" onsubmit="return validateAndShowLoader(this)" id="myForm">
        <div class="row px-2">
            <div asp-validation-summary="ModelOnly" class="text-danger small bg-danger text-white p-2 bg-opacity-75"></div>
            <div class="col-lg-5 pt-2">
                @* Main Column 1 *@
                <div class="container ">
                    <div class="row p-3 border border-info rounded">
                        <div class="row pb-4">
                            <input type="hidden" asp-for="Order.OrderNo" />

                            <div class="col-lg-7 col-md-7 col-sm-7 col-7 form-group">
                                <label asp-for="Order.OfficeId" class="control-label"></label>
                                <select asp-for="Order.OfficeId" class="form-control form-select" asp-items="ViewBag.OfficeId"></select>
                            </div>

                            <div class="col-lg-5 col-md-5 col-sm-5 col-5  form-group">
                                <label asp-for="Order.OrderDate" class="control-label"></label>
                                <input asp-for="Order.OrderDate" class="form-control" value="@DateTime.UtcNow.AddHours(8).ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="Order.OrderDate" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="row pb-4">
                            <div class="col-lg-12 ">
                                <label asp-for="Order.CustomerId" class="control-label"></label>
                                <div class="input-group">
                                    <select asp-for="Order.CustomerId" id="CustomerId" class="form-control form-select" asp-items="ViewBag.CustomerId">
                                        <option value="">-- Select Customer--</option>
                                    </select>
                                    <div class="input-group-append">
                                        <button class="btn btn-primary" type="button" onclick="openCustomerSearchModal()"><i class="fas fa-search"></i></button>
                                    </div>

                                </div>
                                <div class="col-lg-12 p-2">
                                    <span id="CustClassDisplay" class="badge bg-success"></span>
                                    <input id="Order_CustClass" name="Order.CustClass" type="hidden" />
                                </div>
                                <span asp-validation-for="Order.CustomerId" class="text-danger small"></span>
                            </div>

                        </div>

                    </div>
                    <input asp-for="Order.ItemNo" type="hidden" />
                    <br />
                    <div class="row p-3 border border-warning rounded">
                        <div class="row pb-4">
                            <div class="col-lg-4 col-md-4 col-sm-12 col-12 form-group">
                                Category
                                <select id="ProductCategory" asp-for="Order.ProductCategory" data-name="ProductCategory" class="form-control form-select">
                                    <option value="Regular">Regular</option>
                                    <option value="Promo">Promo</option>
                                    <option value="Freebie">Freebie</option>
                                </select>
                                <span asp-validation-for="Order.ProductCategory" class="text-danger small"></span>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-12 col-12 form-group">
                                <label asp-for="Order.ProductId" class="control-label"></label>
                                <select id="ProductId" asp-for="Order.ProductId" data-name="ProductId" class="form-control form-select" asp-items="ViewBag.ProductId">
                                </select>
                            </div>
                        </div>

                        <div class="row pb-4">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-12 form-group">
                                <label asp-for="Order.ComboId" class="control-label"></label>
                                <select id="ComboId" asp-for="Order.ComboId" data-name="ComboId" class="form-control form-select" asp-items="ViewBag.ProductCombos">
                                    @* <option value="">-- Select --</option> *@
                                </select>
                            </div>
                        </div>
                        <div class="row pb-4">
                            <div class="col-lg-4 col-md-4 col-sm-4 col-4 form-group">
                                <label asp-for="Order.Qty" class="control-label"></label>
                                <input id="Qty" asp-for="Order.Qty" data-name="Qty" class="form-control" />
                                <span asp-validation-for="Order.Qty" class="text-danger small"></span>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-8 col-8 form-group">
                                <input id="Price" asp-for="Order.Price" asp-format="{0:C2}" data-name="Price" type="hidden" />
                                <label asp-for="Order.Amount" class="control-label"></label>
                                <input id="Amount" asp-for="Order.Amount" asp-format="{0:C2}" data-name="Amount" class="form-control" />
                                <span asp-validation-for="Order.Amount" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-none">
                            <div class="form-group">
                                <label asp-for="Order.EncodeDate" class="control-label"></label>
                                <input asp-for="Order.EncodeDate" class="form-control" value="@DateTime.UtcNow.AddHours(8)" />
                                <span asp-validation-for="Order.EncodeDate" class="text-danger small"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Order.EncodedBy" class="control-label"></label>
                                <input asp-for="Order.EncodedBy" class="form-control" value="@User?.Identity.Name" />
                                <span asp-validation-for="Order.EncodedBy" class="text-danger small"></span>
                            </div>

                        </div>
                    </div>
                    <div class="row pt-3 pb-3">
                        <button type="button" class="btn btn-primary btn-lg" onclick="addProduct()"><i class="fas fa-cart-plus"></i> Add to Cart</button>
                    </div>
                </div>
            </div>
            <div class="col-lg-7 pt-2">
                @* Main Column 2 *@
                <!-- Area for Items selected -->
                <div class="container">
                    <div class="row bg-dark ">
                        <div class="p-2 bg-secondary bg-gradient text-white fw-bold">Cart: </div>
                        <table id="cartTable" title="Cart" class="table table-striped table-dark table-sm small ">
                            <!-- style="min-height: 300px;" -->
                            <thead>
                                <tr>
                                    <th scope="col" class="col-4">Product Items</th>
                                    <th scope="col" class="col-5">Product Combo</th>
                                    <th scope="col" class="col-1">Price</th>
                                    <th scope="col" class="col-1">Quantity</th>
                                    <th scope="col" class="col-1">Amount</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="6"> &nbsp;</td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Total</th>
                                    <td colspan="3"></td>
                                    <td scope="row"><strong>₱<span id="grandTotal">0</span></strong></td>
                                    <td></td>
                                </tr>

                            </tfoot>
                        </table>

                    </div>
                    <hr />
                    <div class="row  pb-4">
                        <div class="col-lg-4 col-md-6 col-sm-12 col-12 form-group">
                            <label asp-for="Order.PaymentMethod" class="control-label"></label>
                            <select asp-for="Order.PaymentMethod" class="form-control" asp-items="ViewBag.PaymentMethod"></select>
                        </div>
                        <div class="col-lg-4 col-md-6 col-sm-12 col-12 form-group">
                            <label asp-for="Order.PaidAmount" class="control-label"></label>
                            <input asp-for="Order.PaidAmount" class="form-control" />
                            <span asp-validation-for="Order.PaidAmount" class="text-danger small"></span>
                        </div>
                        <div class="col-lg-4 col-md-6 col-sm-12 col-12 form-group">
                            <label asp-for="Order.RefNo" class="control-label"></label>
                            <input asp-for="Order.RefNo" class="form-control" />
                        </div>
                    </div>
                    <div class="row pb-4">
                        <div class="form-group">
                            <label asp-for="Order.Notes" class="control-label"></label>
                            <textarea asp-for="Order.Notes" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group d-flex pt-2">
            <button type="submit" value="Save" class="btn btn-primary ms-auto"><i class="fas fa-save"></i> Save</button>
            @* <input type="submit" value="Save" class="btn btn-primary ms-auto" /> *@
        </div>
        @Html.AntiForgeryToken()
    </form>

    <div>
        <a asp-page="Index">Back to List</a>
    </div>

    <!-- Customer Search Modal -->
    <div class="modal fade" id="customerSearchModal" tabindex="-1" aria-labelledby="customerSearchLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Search Customer</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="text" id="customerSearchInput" class="form-control mb-3" placeholder="Enter name, customer ID, email, mobile..." />

                    <table class="table table-sm table-hover table-bordered small">
                        <thead>
                            <tr>
                                <th>Customer ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Mobile</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="customerSearchResults">
                            <!-- Results injected here -->

                        </tbody>
                        <tfoot>
                        </tfoot>
                    </table>
                    <a asp-page="/Customers/Create" type="button" class="btn btn-primary float-end"><i class="fas fa-user-plus"></i> New Customer</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        //Get Customer Class to determine if Staff. Staff has different price

        $('#CustomerId').on('change', function () {
            showLoader();
            var customerId = $(this).val();

            if (customerId) {
                $.ajax({
                    url: '@Url.Page("Create", "CustomerClass")',
                    type: 'GET',
                    data: { id: customerId },
                    success: function (res) {
                        if (res.success) {
                            $('#CustClassDisplay').text(res.custClassName);
                            $('#Order_CustClass').val(res.custClassId);
                        } else {
                            $('#CustClassDisplay').text("Not found");
                        }
                    },
                    complete: function () {
                        hideLoader(); // hide only when done
                    },
                    error: function () {
                        alert('Error retrieving customer class');
                    }
                });
            }
        });
    </script>


    <script>
        var amount = 0;
        $(document).ready(function () {
            $('#ProductId').change(function () {
                showLoader();
                var selectedProductId = $(this).val();
                var custclasstxt = $('#CustClassDisplay').text();
                $("#ComboId").empty();
                $.getJSON(`?handler=ProductComboList&ProdId=${selectedProductId}`, (data) => {
                    $.each(data, function (i, item) {
                        $("#ComboId").append(`<option value="${data[i].value}">${data[i].text}</option>`);
                    });
                });
                $.ajax({
                    cache: false,
                    type: "GET",
                    url: "?handler=GetProducAmount",
                    data: { __RequestVerificationToken: gettoken(), id: selectedProductId, custclass: custclasstxt },
                    dataType: 'json',
                    success: function (response) {
                        amount = response;
                        $("#Price").val(amount);
                        var tot = $("#Qty").val() * amount;
                        $("#Amount").val(tot);
                    },
                    complete: function () {
                        hideLoader(); // hide only when done
                    },
                    failure: function (response) {
                        alert('failure:' + response.responseText);
                    },
                    error: function (response) {
                        $("#partialModal").find(".modal-body").html(response);
                        alert('Error encountered. This record may already have been deleted.');
                    }
                });

            });
        });

        // Get Token for authorization
        function gettoken() {
            return $('input[name="__RequestVerificationToken"]').val();
        }

        //Calcualte on input of quantity
        $(document).ready(function () {
            $("#Qty").on("input", function () {
                var tot = $(this).val() * amount;
                $("#Amount").val(tot);
            });
        });

        $(function () {
            $("#ProductCategory").on("change", function () {
                showLoader();
                var category = $(this).val();
                $("#ProductId").empty();

                // Show the loader before the request
                showLoader();

                $.getJSON(`?handler=ProductList&ProdCat=${category}`)
                    .done(function (data) {
                        $.each(data, function (i, item) {
                            $("#ProductId").append(`<option value="${item.value}">${item.text}</option>`);
                        });
                    })
                    .fail(function () {
                        toastr.error("Failed to load products.");
                    })
                    .always(function () {
                        // Always hide loader after request completes
                        hideLoader();
                    });
            });
        });


        $(function () {
            $("#OrderType").on("change", function () {
                showLoader();
                var type = $(this).val();
                $("#CustomerId").empty();
                $("#CustomerId").append("<option value=''>Select</option>");
                $.getJSON(`?handler=Customers`, (data) => {
                    $.each(data, function (i, item) {
                        $("#CustomerId").append(`<option value="${data[i].value}">${data[i].text}</option>`);
                    });
                });
            });
        });
    </script>

    <script>
        //For Cart Processes
        let cart = [];

        function addProduct() {
            const validationSummary = document.querySelector('.validation-summary-errors');
            if (validationSummary) {
                validationSummary.innerHTML = ''; // Clear the error messages
                validationSummary.style.display = 'none'; // Hide the summary div
            }

            if (document.getElementById('CustomerId').value === "") {
                toastr.options.positionClass = "toast-bottom-right";
                toastr.options.closeButton = false;
                toastr.options.showDuration = 100;
                toastr.options.hideDuration = 1000;
                toastr.options.timeOut = 5000;
                toastr.warning('Please select a customer.');
                return;
            }

            const prodCat = document.getElementById('ProductCategory');
            const select = document.getElementById('ProductId');
            const selectedOption = select.options[select.selectedIndex];
            const selectedText = select.options[select.selectedIndex].text;
            const productId = parseInt(select.value);

            if (selectedOption.value == 0) {
                toastr.options.positionClass = "toast-bottom-right";
                toastr.options.closeButton = false;
                toastr.options.showDuration = 100;
                toastr.options.hideDuration = 1000;
                toastr.options.timeOut = 5000;
                toastr.warning('Please select a product.');
                return;
            }

            const selectedCombo = document.getElementById('ComboId');
            const selectedComboOption = selectedCombo.options[selectedCombo.selectedIndex] ?? null;
            const selectedComboText = selectedCombo.options[selectedCombo.selectedIndex].text ?? null;
            const combId = parseInt(selectedCombo.value);

            const price = parseFloat(document.getElementById('Price').value);
            let qty = parseInt(document.getElementById('Qty').value) ?? 1;
            const quantity = isNaN(qty) ? 1 : qty;

            const existing = cart.find(p => p.productId === productId);
            if (existing) {
                existing.quantity += quantity;
            } else {
                cart.push({
                    productId: productId,
                    productName: selectedText,
                    productCombo: isNaN(combId) ? null : combId,
                    comboName: selectedComboText,
                    price,
                    quantity
                });
            }

            syncCartWithServer();
            updateCartTable();
        }

        function updateCartTable() {
            const tbody = document.querySelector('#cartTable tbody');
            tbody.innerHTML = '';
            let total = 0;

            cart.forEach(item => {
                const row = document.createElement('tr');
                row.innerHTML = `
                        <td class="col-4 align-middle">${item.productName}</td>
                        <td class="col-5 align-middle">${item.comboName}</td>
                        <td class="col-1 align-middle">₱${item.price.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}</td >
                        <td class="col-1">
                            <input type="number" min="1" class="form-control input-sm align-middle" value="${item.quantity}" maxlength="5" onchange="editQuantity(${item.productId}, this.value)" />
                        </td>
                        <td class="col-1 align-middle">₱${(item.price * item.quantity).toFixed(2)}</td>
                        <td><button type="button" class="btn btn-danger btn-sm" title="Remove item" onclick="removeProduct(${item.productId})"><i class="fas fa-times"></i></button></td>
                                                                               `;
                tbody.appendChild(row);
                total += item.price * item.quantity;
            });

            document.getElementById('grandTotal').innerText = total.toFixed(2);
            document.getElementById("ProductCategory").value = "";
            document.getElementById("ProductId").value = "";
            document.getElementById("ComboId").value = "";
            document.getElementById("Price").value = "";
            document.getElementById("Qty").value = "";
            document.getElementById("Amount").value = "";

        }

        function editQuantity(productId, newQty) {
            const product = cart.find(p => p.productId === productId);
            if (product) {
                product.quantity = parseInt(newQty);
                syncCartWithServer();
                updateCartTable();
            }
        }

        function removeProduct(productId) {
            cart = cart.filter(p => p.productId !== productId);
            fetch('?handler=RemoveProduct', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json', 'RequestVerificationToken': getRequestVerificationToken() },
                body: JSON.stringify(productId)
            }).then(() => {
                updateCartTable();
            });
        }

        function syncCartWithServer() {
            fetch('?handler=SyncCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': getRequestVerificationToken()
                },
                body: JSON.stringify(cart)
            });
        }

        function saveOrder() {
            if (!cart || cart.length === 0) {
                toastr.options.positionClass = "toast-bottom-right";
                toastr.options.closeButton = false;
                toastr.options.showDuration = 100;
                toastr.options.hideDuration = 1000;
                toastr.options.timeOut = 5000;
                toastr.warning('Your cart is empty. Please add at least one product.');
                return;
            }
            const form = document.querySelector('form');
            const formData = new FormData(form);

            fetch('?handler=SaveOrder', {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': getRequestVerificationToken()
                },
                body: formData
            }).then(res => {
                if (res.ok) {
                    alert('Order saved successfully!');
                    cart = [];
                    updateCartTable();
                } else {
                    res.text().then(text => alert('Failed to save order: ' + text));
                }
            }).catch(err => {
                alert('Network error: ' + err.message);
            });
        }
        function getRequestVerificationToken() {
            return document.querySelector('input[name="__RequestVerificationToken"]').value;
        }
    </script>

    <script>
        function openCustomerSearchModal() {
            $('#customerSearchModal').modal('show');
        }

        // Live Customer search on input
        $('#customerSearchInput').on('input', function () {
            const keyword = $(this).val();
            if (keyword.length < 2) return;

            $.ajax({
                url: '?handler=SearchCustomer',
                method: 'GET',
                data: { term: keyword },
                success: function (data) {
                    const tbody = $('#customerSearchResults');
                    tbody.empty();

                    if (data.length === 0) {
                        tbody.append('<tr><td colspan="4">No results found.</td></tr>');
                        return;
                    }

                    data.forEach(customer => {
                        tbody.append(`
                            <tr>
                            <td>${customer.custcode}</td>
                                <td>${customer.name}</td>
                                <td>${customer.email}</td>
                                <td>${customer.phone}</td>
                                <td>
                                    <button class="btn btn-sm btn-success" onclick='selectCustomer(${JSON.stringify(customer)})'>
                                        Select
                                    </button>
                                </td>
                            </tr>
                        `);
                    });
                }
            });
        });

        // When customer is selected
        function selectCustomer(customer) {
            $('#Order_CustomerId').val(customer.id); // Update the select input
            $('#customerSearchModal').modal('hide');

            // Populate other form fields:
            $('#CustomerId').val(customer.id).change();
            //$('#CustomerEmail').val(customer.email);
        }
    </script>
}
