    <script>
        document.addEventListener("DOMContentLoaded", function () {
            showLoader();
        });

        const loadTracker = {
            customerClass: false,
            productList: false,
            productCombo: false
        };

        function checkAllLoaded() {
            if (Object.values(loadTracker).every(v => v)) {
                hideLoader();
            }
        }

        function gettoken() {
            return $('input[name="__RequestVerificationToken"]').val();
        }

        function loadCustomerClass(customerId) {
            showLoader();
            return $.ajax({
                url: '@Url.Page("New", "CustomerClass")',
                type: 'GET',
                data: { id: customerId },
                success: function (res) {
                    if (res.success) {
                        $('#CustClassDisplay').text(res.custClassName);
                        $('#Order_CustClass').val(res.custClassId);
                        $('#Price').prop('readonly', res.custClassName === 'Others' ? false : true);
                        loadTracker.customerClass = true;
                    } else {
                        $('#CustClassDisplay').text("Not found");
                    }
                    checkAllLoaded();
                },
                error: function () {
                    alert('Error retrieving customer class');
                }
            });
        }

        function loadProductList() {
            showLoader();
            const category = $('#ProductCategory').val();
            const custclasstxt = $('#CustClassDisplay').text();

            if (!category || !custclasstxt) {
                loadTracker.productList = true;
                checkAllLoaded(); // ✅ Add this
                return;
            }

            $("#ProductId").empty();
            const tz = document.getElementById("OfficeTimeZone").value;
            let url = `?handler=ProductList&ProdCat=${category}&custclass=${custclasstxt}`;

            if (tz) { // only append if not empty
                url += `&OfficeTimeZone=${encodeURIComponent(tz)}`;
            }

            $.getJSON(url, function (data) {
                $.each(data, function (i, item) {
                    $("#ProductId").append(`<option value="${item.value}">${item.text}</option>`);
                });
                loadTracker.productList = true;
                checkAllLoaded();
            });
        }

        function loadProductDetails(productId) {
            // alert('loadProductDetails');
            showLoader();
            const custclasstxt = $('#CustClassDisplay').text();
            const officeid = $('#OfficeId').val();
            $("#ComboId").empty();


            $.getJSON(`?handler=ProductComboList&ProdId=${productId}`, function (data) {
                $.each(data, function (i, item) {
                    $("#ComboId").append(`<option value="${item.value}">${item.text}</option>`);
                });
                loadTracker.productCombo = true;
                checkAllLoaded();
            });

            let category = $('#ProductCategory').val();
            if (category === 'Freebie') {
                amount = 0;
                $("#Price").val(amount);
                let qty = parseFloat($("#Qty").val()) || 0;
                let tot = qty * amount;
                let formattedTotal = tot.toLocaleString(locale, { minimumFractionDigits: 2, maximumFractionDigits: 2 });
                $('#Amount').val(formattedTotal);
                hideLoader();
                return;
            }


            $.ajax({
                cache: false,
                type: "GET",
                url: "?handler=GetProducAmount",
                data: { __RequestVerificationToken: gettoken(), id: productId, custclass: custclasstxt, officeId: officeid },
                dataType: 'json',
                success: function (response) {
                    amount = response;
                    $("#Price").val(amount);
                    var tot = $("#Qty").val() * amount;
                    let formattedTotal = tot.toLocaleString(locale, { minimumFractionDigits: 2, maximumFractionDigits: 2 });
                    $('#Amount').val(formattedTotal);

                },
                error: function () {
                    alert('Error retrieving price.');
                },
                complete: function () {
                    hideLoader();
                }
            });
        }

        var amount = 0;

        $(function () {
            $('#CustomerId').on('change', function () {

                showLoader();
                const customerId = $(this).val();

                // Clear validation message manually
                if (customerId) {
                    $('span[data-valmsg-for="Order.CustomerId"]').text('');
                }

                loadTracker.customerClass = false;
                loadTracker.productList = false;

                if (customerId) {
                    loadCustomerClass(customerId).done(() => {
                        setTimeout(loadProductList, 100);
                    });
                }
            });

            $('#ProductCategory').on('change', function () {
                loadTracker.productList = false;
                loadProductList();
            });

            $('#ProductId').on('change', function () {
                showLoader();
                const selectedProductId = $(this).val();
                loadTracker.productCombo = false;
                loadProductDetails(selectedProductId);
            });

            $('#Qty').on('input', function () {
                const tot = $(this).val() * amount;
                let formattedTotal = tot.toLocaleString(locale, { minimumFractionDigits: 2, maximumFractionDigits: 2 });
                $('#Amount').val(formattedTotal);
            });
        });

        $(document).ready(function () {
            const existingCustomerId = $('#CustomerId').val();
            const existingCategory = $('#ProductCategory').val();
            const existingProduct = $('#ProductId').val();

            if (existingCustomerId) {
                loadCustomerClass(existingCustomerId).done(() => {
                    if (existingCategory) {
                        loadProductList();

                        if (existingProduct) {
                            loadProductDetails(existingProduct);
                        } else {
                            // Assume no product details to load
                            loadTracker.productCombo = true;
                            checkAllLoaded();
                        }
                    } else {
                        // No product category selected
                        loadTracker.productList = true;
                        loadTracker.productCombo = true;
                        checkAllLoaded();
                    }
                });
                hideLoader();
            } else {
                // No customer selected at all
                loadTracker.customerClass = true;
                loadTracker.productList = true;
                loadTracker.productCombo = true;
                checkAllLoaded();
            }
        });

    </script>

    <script>
        function openCustomerSearchModal() {
            $('#customerSearchModal').modal('show');
        }


        $('#CustomerSearchInputModal').on('input', function () {
            const keyword = $(this).val();
            if (keyword.length < 2) return;

