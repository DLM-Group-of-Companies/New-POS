        function addPaymentRow() {
            const options = $('#paymentOptionsSource').html();

            const row = `
                                                    <tr>
                                                        <td>
                                                            <select class="form-control form-control-sm form-select form-select-sm payment-method">
                                                                ${options}
                                                            </select>
                                                        </td>
                                                        <td>
                                                            <input type="number" class="form-control form-control-sm payment-amount" />
                                                        </td>
                                                        <td>
                                                            <input type="text" class="form-control form-control-sm payment-charge" readonly />
                                                        </td>
                                                        <td>
                                                            <input type="text" class="form-control form-control-sm payment-ref" />
                                                        </td>
                                                        <td>
                                                        <input type="hidden" class="payment-percent" />
                                                            <button type="button" class="btn btn-sm btn-danger" onclick="removePaymentRow(this)">
                                                                <i class="fas fa-times"></i>
                                                            </button>
                                                        </td>
                                                    </tr>`;

            $('#paymentTableBody').append(row);
            reindexPaymentRows();
            updateChargesPerRow();
        }

        function removePaymentRow(btn) {
            $(btn).closest('tr').remove();
            reindexPaymentRows();
            updateChargesPerRow();
        }

        function bindPaymentEvents() {
            $('#paymentTableBody').on('change', '.payment-method, .payment-amount', function () {
                updateChargesPerRow();
            });
        }

        function updateChargesPerRow() {
            $('#paymentTableBody tr').each(function () {
                const $row = $(this);
                const $selectedOption = $row.find('.payment-method option:selected');
                const selectedText = $selectedOption.text().trim();
                const serviceChargeRate = parseFloat($selectedOption.data('charge')) || 0;
                const amount = parseFloat($row.find('.payment-amount').val()) || 0;

                if (selectedText === 'Credit Card' && amount > 0) {
                    const charge = amount * serviceChargeRate;
                    $row.find('.payment-charge').val(charge.toFixed(2));
                    $row.find('.payment-percent').val(serviceChargeRate.toFixed(4));
                    updateServiceCharge(charge, serviceChargeRate);
                } else {
                    $row.find('.payment-charge').val('');
                    $row.find('.payment-percent').val('');
                }
            });
        }

        function updateServiceCharge(charge, rate) {
            $('#ServiceChargeValue').val(charge.toFixed(2));
            $('#serviceChargePercent').val(rate.toFixed(4)); // 4 decimals now
        }

        function reindexPaymentRows() {
            $('#paymentTableBody tr').each(function (i) {
                $(this).find('select.payment-method').attr('name', `Payments[${i}].PayMethod`);
                $(this).find('input.payment-amount').attr('name', `Payments[${i}].Amount`);
                $(this).find('input.payment-charge').attr('name', `Payments[${i}].ServiceChargeAmount`);
                $(this).find('input.payment-ref').attr('name', `Payments[${i}].RefNo`);
                $(this).find('input.payment-percent').attr('name', `Payments[${i}].ServiceChargePercent`);

            });
        }
    </script>


