@page
@model NLI_POS.Pages.Orders.NewModel
@using System.Text.Json

@{
    ViewData["Title"] = "New Order";
}
<div class="container-fluid bg-white bg-gradient shadow p-3 small">
    <div class="d-flex justify-content-between align-items-center mb-1">
        <h4 class="mb-0 text-primary">
            <i class="fas fa-cart-plus me-2"></i> New Order
        </h4>
        <i class="fas fa-window-close fa-2xl text-danger" role="button" title="Close" onclick="window.location = './Index';"></i>
    </div>
    <hr />

    <div class="container-fluid bg-primary bg-gradient bg-opacity-25 rounded-3 shadow p-2">
        <form method="post" id="myForm">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger small bg-danger text-white p-2 bg-opacity-75 mb-2"></div>

            <div class="row gx-2">
                <!-- Left Panel -->
                <div class="col-lg-4">
                    <!-- Office Info -->
                    <div class="p-3 bg-light border rounded shadow-sm mb-2">
                        <h6 class="text-secondary border-bottom pb-1 mb-2 fw-bold">
                            <i class="fas fa-building text-primary me-2"></i> Office 
                        </h6>
                        <input type="hidden" asp-for="Order.OrderNo" />
                        <div class="row gx-2">
                            <div class="col-7 mb-2">
                                <label asp-for="Order.OfficeId" class="form-label"></label>
                                <select id="OfficeId" asp-for="Order.OfficeId" class="form-control form-control-sm form-select form-select-sm">
                                    @foreach (var office in Model.OfficeList)
                                    {
                                        <option value="@office.Value"
                                                data-locale="@office.Locale"
                                                data-currency="@office.CurrencyCode"
                                                data-timezone="@office.TimeZone">
                                            @office.Text
                                        </option>
                                    }
                                </select>
                                <input type="hidden" id="OfficeTimeZone" name="OfficeTimeZone" />
                                <input type="hidden" id="OfficeLocale" name="OfficeLocale" />
                                @* /* Set timezone */ *@
                                <script>
                                    function updateOfficeTimeZone() {
                                        const select = document.getElementById("OfficeId");
                                        const selectedOption = select.options[select.selectedIndex];
                                        const tz = selectedOption.getAttribute("data-timezone");
                                        document.getElementById("OfficeTimeZone").value = tz;
                                        const loc = selectedOption.getAttribute("data-locale");
                                        document.getElementById("OfficeLocale").value = loc;
                                        
                                    }

                                    document.getElementById("OfficeId").addEventListener("change", updateOfficeTimeZone);

                                    // Run once on page load so the hidden input is set even if user doesn't change dropdown
                                    updateOfficeTimeZone();
                                </script>
                            </div>
                            <div class="col-5 mb-2">
                                <label asp-for="Order.OrderDate" class="form-label"></label>
                                <input asp-for="Order.OrderDate" class="form-control form-control-sm" value="@DateTime.UtcNow.AddHours(8).ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="Order.OrderDate" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Customer Info -->
                    <div class="p-3 bg-light border rounded shadow-sm mb-2">
                        <h6 class="text-secondary border-bottom pb-1 mb-2 fw-bold">
                            <i class="fas fa-user text-success me-2"></i> Customer 
                        </h6>
                        <label asp-for="Order.CustomerId" class="form-label"></label>
                        <div class="input-group mb-2">
                            <!-- Visible input (for searching by name) -->
                            <input type="text" id="CustomerSearchInput" class="form-control form-control-sm " placeholder="Search customer..." autocomplete="off" />

                            <!-- Hidden input (for actual submission of CustomerId) -->
                            <input type="hidden" name="Order.CustomerId" id="CustomerId" />
                            <button class="btn btn-success btn-sm" type="button" onclick="openCustomerSearchModal()"><i class="fas fa-search"></i></button>
                        </div>
                        <div class="mb-2">
                            <span id="CustClassDisplay" class="badge bg-success"></span>
                            <input id="Order_CustClass" name="Order.CustClass" type="hidden" />
                        </div>
                        <span asp-validation-for="Order.CustomerId" class="text-danger small"></span>
                    </div>

                    <!-- Product Selection -->
                    <div class="p-3 bg-light border rounded shadow-sm mb-2">
                        <h6 class="text-secondary border-bottom pb-1 mb-2 fw-bold">
                            <i class="fas fa-box text-info me-2"></i> Product 
                        </h6>
                        <div class="row gx-2">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-12 mb-2">
                                <label class="form-label">Category</label>
                                <select id="ProductCategory" class="form-control form-control-sm form-select form-select-sm">
                                    <option value="Regular">Regular</option>
                                    <option value="Package">Package</option>
                                    <option value="Freebie">Freebie</option>
                                </select>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-12 mb-2">
                                <label class="form-label">Product</label>
                                <select id="ProductId" class="form-control form-control-sm form-select form-select-sm" asp-items="ViewBag.ProductId"></select>
                            </div>
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Combo (if applicable)</label>
                            <select id="ComboId" class="form-control form-control-sm form-select form-select-sm" asp-items="ViewBag.ProductCombos"></select>
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-2">
                                <label class="form-label">Quantity</label>
                                <input id="Qty" type="number" class="form-control form-control-sm" value="1" min="1" />
                            </div>
                            <div class="col-md-8 mb-2">
                                <label class="form-label">Amount</label>
                                <input id="Amount" type="text" class="form-control form-control-sm fw-bold" readonly />
                            </div>
                        </div>
                        <input id="Price" type="hidden" />
                        <div class="d-flex justify-content-end">
                            <button type="button" class="btn btn-info bg-gradient bg-opacity-50" onclick="addProduct()">
                                <i class="fas fa-cart-plus me-2"></i> Add to Cart <i class="fas fa-angle-double-right"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Right Panel -->
                <div class="col-lg-8">
                    <!-- Cart Section -->
                    <div class="p-3 bg-light border rounded shadow-sm mb-2">
                        <h6 class="text-secondary border-bottom pb-1 mb-2 fw-bold">
                            <i class="fas fa-shopping-cart text-dark fw-bold me-2"></i> Cart
                        </h6>
                        <div class="table-responsive">
                            <table id="cartTable" class="table table-bordered table-sm  align-middle">
                                <thead class="table-secondary">
                                    <tr>
                                        <th>Product Items</th>
                                        <th>Product Combo</th>
                                        <th>Price</th>
                                        <th>Qty</th>
                                        <th>Amount</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.SelectedProducts.Any())
                                    {
                                        foreach (var item in Model.SelectedProducts)
                                        {
                                            <tr>
                                                <td>@item.ProductName</td>
                                                <td>@item.ComboName</td>
                                                <td class="text-end">@item.Price.ToString("N2")</td>
                                                <td class="text-end">@item.Quantity</td>
                                                <td class="text-end">@(item.Price * item.Quantity).ToString("N2")</td>
                                                <td><button class="btn btn-sm btn-danger" onclick="removeFromCart(@item.ProductId)"><i class="fas fa-trash"></i></button></td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="6" class="text-center text-muted">No items in cart.</td></tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td></td>
                                        <td colspan="3" class="text-end fw-bold text-uppercase">Sub Total</td>
                                        <td class="text-end">
                                            <strong><span id="subTotal">0</span></strong>
                                        </td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td colspan="3" class="text-end fw-bold text-uppercase">Total Amount Due</td>
                                        <td class="text-end">
                                            <strong><span id="grandTotal">0</span></strong>
                                            <input type="hidden" asp-for="Order.TotAmount" name="Order.TotAmount" id="GrandTotalInput" value="0" />
                                            <input type="hidden" asp-for="ServiceChargeValue" name="ServiceChargeValue" id="ServiceChargeValue" />
                                        </td>
                                        <td></td>
                                    </tr>

                                </tfoot>
                            </table>
                        </div>
                    </div>

                    <!-- Payment Section -->
                    <div class="p-3 bg-light border rounded shadow-sm mb-2">
                        <h6 class="text-secondary border-bottom pb-1 mb-2 fw-bold">
                            <i class="fas fa-credit-card text-warning me-2"></i> Payment
                        </h6>
                        <select id="paymentOptionsSource" class="d-none">
                            @foreach (var method in ViewBag.PaymentMethod)
                            {
                                var charge = method.ServiceCharge ?? 0.0;
                                <option value="@method.Name" data-charge="@charge">@method.Name</option>
                            }
                        </select>
                        <table class="table table-sm" id="paymentTable">
                            <thead>
                                <tr>
                                    <th>Method</th>
                                    <th>Amount</th>
                                    <th>Charge</th>
                                    <th>Ref No.</th>
                                    <th colspan="2"></th>
                                </tr>
                            </thead>
                            <tbody id="paymentTableBody">
                                <tr>
                                    <td>
                                        <select name="Payments[0].PayMethod" class="form-control form-control-sm form-select form-select-sm payment-method">
                                            @foreach (var method in ViewBag.PaymentMethod)
                                            {
                                                var charge = method.ServiceCharge ?? 0.0;
                                                <option value="@method.Name" data-charge="@charge">@method.Name</option>
                                            }
                                        </select>
                                    </td>
                                    <td>
                                        <input type="number" name="Payments[0].Amount" class="form-control form-control-sm payment-amount" />
                                    </td>
                                    <td>
                                        <input type="text" name="Payments[0].ServiceChargeAmount" class="form-control form-control-sm payment-charge" readonly />
                                        <input id="serviceChargePercent" type="hidden" name="Payments[0].ServiceChargePercent" />
                                    </td>
                                    <td>
                                        <input type="text" name="Payments[0].RefNo" class="form-control form-control-sm" />
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-danger" title="Delete" onclick="removePaymentRow(this)">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-warning text-white" title="Add" onclick="addPaymentRow()">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div id="paymentError" class="text-danger small mb-2" style="display:none;"></div>

                        <div class="mb-2">
                            <label asp-for="Order.Notes" class="form-label"></label>
                            <textarea asp-for="Order.Notes" class="form-control form-control-sm" rows="3"></textarea>
                        </div>
                        <div class="mb-2">
                            <label asp-for="Order.SalesBy" class="form-label">Sales By</label>
                            <select id="SalesBy" asp-for="Order.SalesBy" class="form-control form-control-sm form-select form-select-sm" asp-items="Model.SalesPersons" required>
                                <option value="">Select Sales Person</option>
                            </select>
                            <span asp-validation-for="Order.SalesBy" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end pt-3">
                        <button type="submit" class="btn btn-primary btn-lg bg-gradient fw-bold">
                            <i class="fas fa-cash-register me-2 fa-xl py-4"></i> Place Order
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <!-- Customer Search Modal -->
    <div class="modal fade" id="customerSearchModal" tabindex="-1" aria-labelledby="customerSearchLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-success"><i class="fas fa-search me-2"></i>Search Customer</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
