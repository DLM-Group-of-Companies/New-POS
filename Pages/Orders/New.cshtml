            // Sum all payment amounts
            $('.payment-amount').each(function () {
                let val = parseFloat($(this).val().replace(/,/g, '')) || 0;
                totalPaid += val;
            });

            // Fallback: if .payment-amounts are not used, use single input (legacy)
            if (totalPaid === 0) {
                const paidInput = document.getElementById('paidAmount');
                if (paidInput) {
                    totalPaid = parseFloat(paidInput.value.replace(/,/g, '')) || 0;
                }
            }

            // Get grand total
            let grandText = $('#grandTotal').text().replace(/[^\d.-]/g, '');
            let grandTotal = parseFloat(grandText) || 0;

            if (totalPaid < grandTotal) {
                e.preventDefault();
                hideLoader?.();

                $('#paymentError').show().text(
                    `Total paid (${totalPaid.toLocaleString(locale, { style: 'currency', currency })}) is less than order total (${grandTotal.toLocaleString(locale, { style: 'currency', currency })}).`
                );

                return false;
            }
        });
    </script>


