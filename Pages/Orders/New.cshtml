                    <input type="text" id="CustomerSearchInputModal" class="form-control mb-2" placeholder="Enter name, customer ID, email, mobile..." />
                    <table class="table table-sm table-hover table-bordered ">
                        <thead>
                            <tr>
                                <th>Customer ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Mobile</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="customerSearchResults"></tbody>
                    </table>
                    <a asp-page="/Customers/Create" class="btn btn-primary"><i class="fas fa-user-plus"></i> New Customer</a>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Cart Scripts
        let cart = [];

        function addProduct() {
            showLoader();
            const validationSummary = document.querySelector('.validation-summary-errors');
            if (validationSummary) {
                validationSummary.innerHTML = '';
                validationSummary.style.display = 'none';
            }

            if ($('#CustomerId').val() === "") {
                toastr.warning('Please select a customer.');
                document.getElementById('CustomerId').focus();
                hideLoader();
                return;
            }


            const prodCat = $('#ProductCategory option:selected').text();
            const selectedProductId = $('#ProductId').val();
            const selectedProductText = $('#ProductId option:selected').text();
            const comboId = $('#ComboId').val();
            const comboText = $('#ComboId option:selected').text();

            if (prodCat === "Package") {
                if (comboId === "" || comboId === null) {
                    toastr.warning('Please select a combination.');
                    document.getElementById('ComboId').focus();
                    hideLoader();
                    return;
                }
            }

            if (selectedProductId == 0 || selectedProductId == null) {
                toastr.warning('Please select a product.');
                document.getElementById('ProductId').focus();
                hideLoader();
                return;
            }
            const rawPrice = $("#Price").val();
            let rawAmount = $('#Amount').val();
            let price = parseFloat(rawAmount.replace(/,/g, ''));
            let qty = parseInt($('#Qty').val()) || 1;

            // STOCK CHECK HERE
            const officeId = $('#OfficeId').val();

            $.ajax({
                url: "?handler=GetStock",
                type: 'GET',
                data: {
                    productId: selectedProductId,
                    officeId: officeId,
                    qty: qty
                },
                success: function (result) {
                    hideLoader();
                    if (!result.success) {
                        if (result.isPackage && result.insufficientItems?.length) {
                            let msg = `Not enough stock for some items in the package:<br/>`;
                            result.insufficientItems.forEach(item => {
                                msg += `- ${item.name}: Available ${item.available}, Required ${item.required}<br/>`;
                            });
                            toastr.error(msg);
                        } else {
                            toastr.error(`Not enough stock. Available: ${result.available}, Requested: ${qty}`);
                        }
                        return;
                    }

                    // ✅ Proceed with adding to cart
                    const existing = cart.find(p => p.productId === parseInt(selectedProductId));
                    if (existing) {
                        existing.quantity += qty;
                    } else {
                        cart.push({
                            productId: parseInt(selectedProductId),
                            productCat: prodCat,
                            productName: selectedProductText,
                            productCombo: comboId ? parseInt(comboId) : null,
                            comboName: comboText,
                            price: rawPrice,
                            quantity: qty
                        });
                    }

                    syncCartWithServer();
                    updateCartTable();
                    hideLoader();
                },
                error: function () {
                    hideLoader();
                    toastr.error('Error checking stock.');
                }
            });
        }

        function updateCartTable() {
            const tbody = $('#cartTable tbody').empty();
            let total = 0;

            if (cart.length === 0) {
                tbody.append('<tr><td colspan="6" class="text-center text-muted">No items in cart.</td></tr>');
            } else {
                cart.forEach(item => {
                    total += item.price * item.quantity;

                    const formattedPrice = new Intl.NumberFormat(locale, {
                        style: 'currency',
                        currency: currency
                    }).format(item.price);

                    const totalItem = item.price * item.quantity;
                    const formattedTotalItem = new Intl.NumberFormat(locale, {
                        style: 'currency',
                        currency: currency
                    }).format(totalItem);

                    tbody.append(`
                                                                                                <tr>
                                                                                                    <td>${item.productName}</td>
                                                                                                    <td>${item.comboName}</td>
                                                                                                    <td class="text-end">${formattedPrice}</td>
                                                                                                    <td class="text-end"><input type="number" min="1" class="form-control form-control-sm input-sm" value="${item.quantity}" onchange="editQuantity(${item.productId}, this.value)" /></td>
                                                                                                            <td>${formattedTotalItem}</td>
                                                                                                    <td><button class="btn btn-outline-danger btn-sm" onclick="removeProduct(${item.productId})"><i class="fas fa-backspace"></i></button></td>
                                                                                                </tr>`);
                });
            }

            const formattedTotal = new Intl.NumberFormat(locale, {
                style: 'currency',
                currency: currency
            }).format(total);

            $('#grandTotal').text(formattedTotal);
            // Get the plain number value (not formatted) to store in hidden input
            $('#GrandTotalInput').val(total.toFixed(2));


            $('#ProductCategory, #ProductId, #ComboId, #Price, #Qty, #Amount').val('');
        }

        function editQuantity(productId, qty) {
            const product = cart.find(p => p.productId === productId);
            if (product) {
                product.quantity = parseInt(qty);
                syncCartWithServer();
                updateCartTable();
            }
        }

        function removeProduct(productId) {
            cart = cart.filter(p => p.productId !== productId);
            syncCartWithServer();
            updateCartTable();
        }

        function syncCartWithServer() {
            fetch('?handler=SyncCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': gettoken()
                },
                body: JSON.stringify(cart)
            });
        }
    </script>

