@page
@model NLI_POS.Pages.Orders.NewModel

@{
    ViewData["Title"] = "New Order";
}
<div class="container-fluid bg-white bg-gradient rounded-3 shadow p-3">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h4 class="mb-0 text-primary">
            <i class="fas fa-cart-plus me-2"></i> New Order
        </h4>
        <i class="fas fa-window-close fa-2xl text-danger" role="button" title="Close" onclick="window.location = './Index';"></i>
    </div>
    <hr />

    <form method="post" onsubmit="return validateAndShowLoader(this)" id="myForm">
        <div asp-validation-summary="ModelOnly" class="text-danger small bg-danger text-white p-2 bg-opacity-75 mb-2"></div>

        <div class="row">
            <div class="col-lg-4">
                <!-- Office and Date Section -->
                <div class="p-3 bg-light border rounded shadow-sm mb-2">
                    <h5 class="text-secondary border-bottom pb-1 mb-2"><i class="fas fa-building"></i> Office Info</h5>
                    <input type="hidden" asp-for="Order.OrderNo" />
                    <div class="row">
                        <div class="col-6 mb-2">
                            <label asp-for="Order.OfficeId" class="form-label"></label>
                            <select id="OfficeId" asp-for="Order.OfficeId" class="form-select" asp-items="ViewBag.OfficeId"></select>
                        </div>
                        <div class="col-6 mb-2">
                            <label asp-for="Order.OrderDate" class="form-label"></label>
                            <input asp-for="Order.OrderDate" class="form-control" value="@DateTime.UtcNow.AddHours(8).ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="Order.OrderDate" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- Customer Section -->
                <div class="p-3 bg-light border rounded shadow-sm mb-2">
                    <h5 class="text-secondary border-bottom pb-1 mb-2"><i class="fas fa-user"></i> Customer Info</h5>
                    <label asp-for="Order.CustomerId" class="form-label"></label>
                    <div class="input-group mb-2">
                        <select asp-for="Order.CustomerId" id="CustomerId" class="form-select" asp-items="ViewBag.CustomerId">
                            <option value="">-- Select Customer--</option>
                        </select>
                        <button class="btn btn-primary" type="button" onclick="openCustomerSearchModal()"><i class="fas fa-search"></i></button>
                    </div>
                    <div class="mb-2">
                        <span id="CustClassDisplay" class="badge bg-success"></span>
                        <input id="Order_CustClass" name="Order.CustClass" type="hidden" />
                    </div>
                    <span asp-validation-for="Order.CustomerId" class="text-danger small"></span>
                </div>

                <!-- Product Section -->
                <div class="p-3 bg-light border rounded shadow-sm mb-2">
                    <h5 class="text-secondary border-bottom pb-1 mb-2"><i class="fas fa-box"></i> Product Selection</h5>
                    <div class="row">
                        <div class="col-4 mb-2">
                            <label class="form-label">Category</label>
                            <select id="ProductCategory" asp-for="Order.ProductCategory" class="form-select">
                                <option value="Regular">Regular</option>
                                <option value="Promo">Promo</option>
                                <option value="Freebie">Freebie</option>
                            </select>
                            <span asp-validation-for="Order.ProductCategory" class="text-danger small"></span>
                        </div>
                        <div class="col-8 mb-2">
                            <label asp-for="Order.ProductId" class="form-label"></label>
                            <select id="ProductId" asp-for="Order.ProductId" class="form-select" asp-items="ViewBag.ProductId"></select>
                        </div>
                    </div>
                    <div class="mb-2">
                        <label asp-for="Order.ComboId" class="form-label"></label>
                        <select id="ComboId" asp-for="Order.ComboId" class="form-select" asp-items="ViewBag.ProductCombos"></select>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-2">
                            <label asp-for="Order.Qty" class="form-label"></label>
                            <input id="Qty" asp-for="Order.Qty" class="form-control" />
                            <span asp-validation-for="Order.Qty" class="text-danger small"></span>
                        </div>
                        <div class="col-md-8 mb-2">
                            <label asp-for="Order.Amount" class="form-label"></label>
                            <input id="Amount" asp-for="Order.Amount" class="form-control" />
                            <span asp-validation-for="Order.Amount" class="text-danger small"></span>
                        </div>
                    </div>
                    <input id="Price" asp-for="Order.Price" type="hidden" data-name="Price" />
                    <input asp-for="Order.ItemNo" type="hidden" />
                </div>

                <div class="d-flex justify-content-end">
                    <button type="button" class="btn btn-primary" onclick="addProduct()">
                        <i class="fas fa-cart-plus"></i> Add to Cart
                    </button>
                </div>
            </div>

            <div class="col-lg-8">
                <!-- Cart Section -->
                <div class="p-3 bg-light border rounded shadow-sm mb-2">
                    <h5 class="text-secondary border-bottom pb-1 mb-2"><i class="fas fa-shopping-cart"></i> Cart</h5>
                    <div class="table-responsive">
                        <table id="cartTable" class="table table-bordered table-sm small align-middle">
                            <thead class="table-secondary">
                                <tr>
                                    <th>Product Items</th>
                                    <th>Product Combo</th>
                                    <th>Price</th>
                                    <th>Qty</th>
                                    <th>Amount</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="6" class="text-center text-muted">No items in cart.</td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Total Amount Due</th>
                                    <td colspan="3"></td>
                                    <td><strong>₱<span id="grandTotal">0</span></strong></td>
                                    <td></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>

                <!-- Payment Info -->
                <div class="p-3 bg-light border rounded shadow-sm mb-2">
                    <h5 class="text-secondary border-bottom pb-1 mb-2"><i class="fas fa-credit-card"></i> Payment</h5>
                    <div class="row mb-2">
                        <div class="col-md-6">
                            <label asp-for="Order.PaymentMethod" class="form-label"></label>
                            <select asp-for="Order.PaymentMethod" class="form-select" asp-items="ViewBag.PaymentMethod"></select>
                        </div>
                        <div class="col-md-6">
                            <label id="PaymentRef" class="form-label">Reference No.</label>
                            <input id="RefNo" asp-for="Order.RefNo" class="form-control" />
                        </div>
                    </div>
                    <div class="mb-2">
                        <label asp-for="Order.Notes" class="form-label"></label>
                        <textarea asp-for="Order.Notes" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                <div class="d-flex justify-content-end pt-3">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Save
                    </button>
                </div>
            </div>
        </div>
        @Html.AntiForgeryToken()
    </form>

    <div class="mt-3">
        <a asp-page="Index">&larr; Back to List</a>
    </div>

    <!-- Customer Search Modal -->
    <div class="modal fade" id="customerSearchModal" tabindex="-1" aria-labelledby="customerSearchLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Search Customer</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="text" id="customerSearchInput" class="form-control mb-2" placeholder="Enter name, customer ID, email, mobile..." />
                    <table class="table table-sm table-hover table-bordered small">
                        <thead>
                            <tr>
                                <th>Customer ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Mobile</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="customerSearchResults"></tbody>
                    </table>
                    <a asp-page="/Customers/Create" class="btn btn-primary float-end"><i class="fas fa-user-plus"></i> New Customer</a>
                </div>
            </div>
        </div>
    </div>
</div>
    
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Show loader on page load
        document.addEventListener("DOMContentLoaded", function () {
            showLoader();
        });

        const loadTracker = {
            customerClass: false,
            productList: false,
            productCombo: false
        };

        function checkAllLoaded() {
            if (Object.values(loadTracker).every(v => v)) {
                if (typeof hideLoader === "function") hideLoader();
            }
        }


        function gettoken() {
            return $('input[name="__RequestVerificationToken"]').val();
        }

        // Load customer class
        function loadCustomerClass(customerId) {
            return $.ajax({
                url: '@Url.Page("Create", "CustomerClass")',
                type: 'GET',
                data: { id: customerId },
                success: function (res) {
                    if (res.success) {
                        $('#CustClassDisplay').text(res.custClassName);
                        $('#Order_CustClass').val(res.custClassId);
                        $('#Price').prop('readonly', res.custClassName === 'Others' ? false : true);
                        loadTracker.customerClass = true;
                    } else {
                        $('#CustClassDisplay').text("Not found");
                    }
                    checkAllLoaded();
                },
                error: function () {
                    alert('Error retrieving customer class');
                }
            });
        }

        // Load product list
        function loadProductList() {
            const category = $('#ProductCategory').val();
            const custclasstxt = $('#CustClassDisplay').text();

            if (!category || !custclasstxt) return;

            $("#ProductId").empty();
            $.getJSON(`?handler=ProductList&ProdCat=${category}&custclass=${custclasstxt}`, function (data) {
                $.each(data, function (i, item) {
                    $("#ProductId").append(`<option value="${item.value}">${item.text}</option>`);
                });
                loadTracker.productList = true;
                checkAllLoaded();
            });
        }

        // Load combos and amount when product selected
        function loadProductDetails(productId) {
            const custclasstxt = $('#CustClassDisplay').text();
            const officeid = $('#OfficeId').val();
            $("#ComboId").empty();

            $.getJSON(`?handler=ProductComboList&ProdId=${productId}`, function (data) {
                $.each(data, function (i, item) {
                    $("#ComboId").append(`<option value="${item.value}">${item.text}</option>`);
                });
                loadTracker.productCombo = true;
                checkAllLoaded();
            });

            $.ajax({
                cache: false,
                type: "GET",
                url: "?handler=GetProducAmount",
                data: { __RequestVerificationToken: gettoken(), id: productId, custclass: custclasstxt, officeId: officeid },
                dataType: 'json',
                success: function (response) {
                    amount = response;
                    $("#Price").val(amount);
                    var tot = $("#Qty").val() * amount;
                    $("#Amount").val(tot);
                },
                error: function () {
                    alert('Error retrieving price.');
                }
            });
        }

        var amount = 0;

        $(function () {
            $('#CustomerId').on('change', function () {
                const customerId = $(this).val();
                loadTracker.customerClass = false;
                loadTracker.productList = false;
                if (customerId) {
                    loadCustomerClass(customerId).done(() => {
                        setTimeout(loadProductList, 300);
                    });
                }
            });

            $('#ProductCategory').on('change', function () {
                loadTracker.productList = false;
                loadProductList();
            });

            $('#ProductId').on('change', function () {
                const selectedProductId = $(this).val();
                loadTracker.productCombo = false;
                loadProductDetails(selectedProductId);
            });

            $('#Qty').on('input', function () {
                const tot = $(this).val() * amount;
                $('#Amount').val(tot);
            });
        });

        $(document).ready(function () {
            const existingCustomerId = $('#CustomerId').val();
            const existingCategory = $('#ProductCategory').val();
            const existingProduct = $('#ProductId').val();

            if (existingCustomerId) {
                loadCustomerClass(existingCustomerId).done(() => {
                    if (existingCategory) {
                        loadProductList();

                        if (existingProduct) {
                            loadProductDetails(existingProduct);
                        } else {
                            // Assume no product details to load
                            loadTracker.productCombo = true;
                            checkAllLoaded();
                        }
                    } else {
                        // No product category selected
                        loadTracker.productList = true;
                        loadTracker.productCombo = true;
                        checkAllLoaded();
                    }
                });
            } else {
                // No customer selected at all
                loadTracker.customerClass = true;
                loadTracker.productList = true;
                loadTracker.productCombo = true;
                checkAllLoaded();
            }
        });

    </script>

    <script>
        // Cart Scripts
        let cart = [];

        function addProduct() {
            const validationSummary = document.querySelector('.validation-summary-errors');
            if (validationSummary) {
                validationSummary.innerHTML = '';
                validationSummary.style.display = 'none';
            }

            if ($('#CustomerId').val() === "") {
                toastr.warning('Please select a customer.');
                return;
            }

            const prodCat = $('#ProductCategory option:selected').text();
            const selectedProductId = $('#ProductId').val();
            const selectedProductText = $('#ProductId option:selected').text();
            const comboId = $('#ComboId').val();
            const comboText = $('#ComboId option:selected').text();
            const price = parseFloat($('#Price').val());
            let qty = parseInt($('#Qty').val()) || 1;

            const existing = cart.find(p => p.productId === parseInt(selectedProductId));
            if (existing) {
                existing.quantity += qty;
            } else {
                cart.push({
                    productId: parseInt(selectedProductId),
                    productCat: prodCat,
                    productName: selectedProductText,
                    productCombo: comboId ? parseInt(comboId) : null,
                    comboName: comboText,
                    price,
                    quantity: qty
                });
            }

            syncCartWithServer();
            updateCartTable();
        }

        function updateCartTable() {
            const tbody = $('#cartTable tbody').empty();
            let total = 0;

            if (cart.length === 0) {
                tbody.append('<tr><td colspan="6" class="text-center text-muted">No items in cart.</td></tr>');
            } else {
                cart.forEach(item => {
                    total += item.price * item.quantity;
                    tbody.append(`
                                <tr>
                                    <td>${item.productName}</td>
                                    <td>${item.comboName}</td>
                                    <td>₱${item.price.toFixed(2)}</td>
                                    <td><input type="number" min="1" class="form-control input-sm" value="${item.quantity}" onchange="editQuantity(${item.productId}, this.value)" /></td>
                                    <td>₱${(item.price * item.quantity).toFixed(2)}</td>
                                    <td><button class="btn btn-outline-danger btn-sm" onclick="removeProduct(${item.productId})"><i class="fas fa-backspace"></i></button></td>
                                </tr>`);
                });
            }

            $('#grandTotal').text(total.toFixed(2));
            $('#ProductCategory, #ProductId, #ComboId, #Price, #Qty, #Amount').val('');
        }

        function editQuantity(productId, qty) {
            const product = cart.find(p => p.productId === productId);
            if (product) {
                product.quantity = parseInt(qty);
                syncCartWithServer();
                updateCartTable();
            }
        }

        function removeProduct(productId) {
            cart = cart.filter(p => p.productId !== productId);
            syncCartWithServer();
            updateCartTable();
        }

        function syncCartWithServer() {
            fetch('?handler=SyncCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': gettoken()
                },
                body: JSON.stringify(cart)
            });
        }

        function saveOrder() {
            if (!cart.length) {
                toastr.warning('Your cart is empty.');
                return;
            }

            const form = $('form')[0];
            const formData = new FormData(form);

            fetch('?handler=SaveOrder', {
                method: 'POST',
                headers: { 'RequestVerificationToken': gettoken() },
                body: formData
            }).then(res => {
                if (res.ok) {
                    alert('Order saved successfully!');
                    cart = [];
                    updateCartTable();
                } else {
                    res.text().then(text => alert('Failed: ' + text));
                }
            }).catch(err => {
                alert('Error: ' + err.message);
            });
        }
    </script>

    <script>
        function openCustomerSearchModal() {
            $('#customerSearchModal').modal('show');
        }

        $('#customerSearchInput').on('input', function () {
            const keyword = $(this).val();
            if (keyword.length < 2) return;

            $.get('?handler=SearchCustomer', { term: keyword }, function (data) {
                const tbody = $('#customerSearchResults').empty();
                if (!data.length) {
                    tbody.append('<tr><td colspan="5">No results found.</td></tr>');
                    return;
                }

                data.forEach(customer => {
                    tbody.append(`
                                <tr>
                                    <td>${customer.custcode}</td>
                                    <td>${customer.name}</td>
                                    <td>${customer.email}</td>
                                    <td>${customer.phone}</td>
                                    <td><button class="btn btn-sm btn-success" onclick='selectCustomer(${JSON.stringify(customer)})'>Select</button></td>
                                </tr>
                            `);
                });
            });
        });

        function selectCustomer(customer) {
            $('#Order_CustomerId').val(customer.id);
            $('#CustomerId').val(customer.id).change();
            $('#customerSearchModal').modal('hide');
        }

        // Payment type switch
        $(function () {
            const methodSelect = $('[name="Order.PaymentMethod"]');
            const paymentRefLabel = $('#PaymentRef');
            const refNoInput = $('#RefNo');

            function updateRefLabel() {
                const method = methodSelect.val().toLowerCase();
                if (method === 'cash') {
                    paymentRefLabel.text("Cash Amount");
                    refNoInput.attr("type", "number").attr("placeholder", "Enter cash amount");
                } else {
                    paymentRefLabel.text("Reference No.");
                    refNoInput.attr("type", "text").attr("placeholder", "Enter reference number");
                }
            }

            updateRefLabel();
            methodSelect.on('change', updateRefLabel);
        });
    </script>

    @if (!ViewData.ModelState.IsValid)
    {
        <script>$('#ProductId').trigger('change');</script>
    }
}

