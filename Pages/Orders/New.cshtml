    <script>
        function recalculateTotals() {
            let subtotal = 0;

            // Sum cart item prices
            cart.forEach(item => {
                subtotal += item.price * item.quantity;
            });

            // Step 2: No need to calculate service charge here anymore!
            const totalWithSC = subtotal;

            const formattedSubTotal = subtotal.toLocaleString(locale, { style: 'currency', currency });
            const formattedTotal = totalWithSC.toLocaleString(locale, { style: 'currency', currency });

            $('#subTotal').text(formattedSubTotal);
            $('#grandTotal').text(formattedTotal);
            $('#GrandTotalInput').val(totalWithSC.toFixed(2));
        }


        // Run recalculateTotals every time payment method or amount is changed
        $(document).on('change', '.payment-amount, .form-select', function () {
            recalculateTotals();
        });

        // Also run it after adding or removing a product
        function updateCartTable() {
            const tbody = $('#cartTable tbody').empty();
            let total = 0;

            if (cart.length === 0) {
                tbody.append('<tr><td colspan="6" class="text-center text-muted">No items in cart.</td></tr>');
            } else {
                cart.forEach(item => {
                    total += item.price * item.quantity;

                    const formattedPrice = new Intl.NumberFormat(locale, {
                        style: 'currency',
                        currency: currency
                    }).format(item.price);

                    const totalItem = item.price * item.quantity;
                    const formattedTotalItem = new Intl.NumberFormat(locale, {
                        style: 'currency',
                        currency: currency
                    }).format(totalItem);

                    tbody.append(`
                                                                                                                    <tr>
                                                                                                                        <td>${item.productName}</td>
                                                                                                                        <td>${item.comboName}</td>
                                                                                                                        <td class="text-end">${formattedPrice}</td>
                                                                                                                        <td class="text-end"><input type="number" min="1" class="form-control form-control-sm input-sm" style="max-width: 90px; width: 100%;" value="${item.quantity}" onchange="editQuantity(${item.productId}, this.value)" /></td>
                                                                                                                        <td>${formattedTotalItem}</td>
                                                                                                                        <td><button class="btn btn-outline-danger btn-sm" onclick="removeProduct(${item.productId})"><i class="fas fa-backspace"></i></button></td>
                                                                                                                    </tr>`);
                });
            }

            // Call recalculation to update totals
            recalculateTotals();

            $('#ProductCategory, #ProductId, #ComboId, #Price, #Qty, #Amount').val('');
        }
    </script>

