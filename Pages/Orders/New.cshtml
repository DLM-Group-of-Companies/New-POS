    <script>
        // Cart Scripts
        let cart = [];

        function addProduct() {
            const validationSummary = document.querySelector('.validation-summary-errors');
            if (validationSummary) {
                validationSummary.innerHTML = '';
                validationSummary.style.display = 'none';
            }

            if ($('#CustomerId').val() === "") {
                toastr.warning('Please select a customer.');
                return;
            }

            const prodCat = $('#ProductCategory option:selected').text();
            const selectedProductId = $('#ProductId').val();
            const selectedProductText = $('#ProductId option:selected').text();
            const comboId = $('#ComboId').val();
            const comboText = $('#ComboId option:selected').text();
            let rawAmount = $('#Amount').val();
            let price = parseFloat(rawAmount.replace(/,/g, ''));
            let qty = parseInt($('#Qty').val()) || 1;

            // ✅ INSERT STOCK CHECK HERE
            const officeId = $('#OfficeId').val();

            $.ajax({
                url: "?handler=GetStock",
                type: 'GET',
                data: {
                    productId: selectedProductId,
                    officeId: officeId
                },
                success: function (availableStock) {
                    if (qty > availableStock) {
                        toastr.error(`Not enough stock for ${selectedProductText}. Available: ${availableStock}, Requested: ${qty}`);
                        return;
                    }

                    // ✅ Proceed with adding to cart
                    const existing = cart.find(p => p.productId === parseInt(selectedProductId));
                    if (existing) {
                        existing.quantity += qty;
                    } else {
                        cart.push({
                            productId: parseInt(selectedProductId),
                            productCat: prodCat,
                            productName: selectedProductText,
                            productCombo: comboId ? parseInt(comboId) : null,
                            comboName: comboText,
                            price,
                            quantity: qty
                        });
                    }

                    syncCartWithServer();
                    updateCartTable();
                },
                error: function () {
                    toastr.error('Error checking stock.');
                }
            });
        }

        function updateCartTable() {
            const tbody = $('#cartTable tbody').empty();
            let total = 0;

            if (cart.length === 0) {
                tbody.append('<tr><td colspan="6" class="text-center text-muted">No items in cart.</td></tr>');
            } else {
                cart.forEach(item => {
                    total += item.price * item.quantity;

                    const formattedPrice = new Intl.NumberFormat(locale, {
                        style: 'currency',
                        currency: currency
                    }).format(item.price);

                    const totalItem = item.price * item.quantity;
                    const formattedTotalItem = new Intl.NumberFormat(locale, {
                        style: 'currency',
                        currency: currency
                    }).format(totalItem);

                    tbody.append(`
                                                                                                        <tr>
                                                                                                            <td>${item.productName}</td>
                                                                                                            <td>${item.comboName}</td>
                                                                                                            <td>${formattedPrice}</td>
                                                                                                            <td><input type="number" min="1" class="form-control input-sm" value="${item.quantity}" onchange="editQuantity(${item.productId}, this.value)" /></td>
                                                                                                                    <td>${formattedTotalItem}</td>
                                                                                                            <td><button class="btn btn-outline-danger btn-sm" onclick="removeProduct(${item.productId})"><i class="fas fa-backspace"></i></button></td>
                                                                                                        </tr>`);
                });
            }

            const formattedTotal = new Intl.NumberFormat(locale, {
                style: 'currency',
                currency: currency
            }).format(total);

            $('#grandTotal').text(formattedTotal);
            $('#ProductCategory, #ProductId, #ComboId, #Price, #Qty, #Amount').val('');
        }

        function editQuantity(productId, qty) {
            const product = cart.find(p => p.productId === productId);
            if (product) {
                product.quantity = parseInt(qty);
                syncCartWithServer();
                updateCartTable();
            }
        }

        function removeProduct(productId) {
            cart = cart.filter(p => p.productId !== productId);
            syncCartWithServer();
            updateCartTable();
        }

        function syncCartWithServer() {
            fetch('?handler=SyncCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': gettoken()
                },
                body: JSON.stringify(cart)
            });
        }

        function saveOrder() {
            if (!cart.length) {
                toastr.warning('Your cart is empty.');
                return;
            }

            const form = $('form')[0];
            const formData = new FormData(form);

            fetch('?handler=SaveOrder', {
                method: 'POST',
                headers: { 'RequestVerificationToken': gettoken() },
                body: formData
            }).then(res => {
                if (res.ok) {
                    alert('Order saved successfully!');
                    cart = [];
                    updateCartTable();
                } else {
                    res.text().then(text => alert('Failed: ' + text));
                }
            }).catch(err => {
                alert('Error: ' + err.message);
            });
        }
    </script>

