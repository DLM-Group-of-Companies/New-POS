    <script>
        document.querySelector('form').addEventListener('submit', function (e) {
            e.preventDefault(); // Always prevent default until we're sure

            // Check if cart is empty
            if (!cart || cart.length === 0) {
                hideLoader();
                toastr.warning('Your cart is empty. Please add products before placing the order.');
                return false;
            }

            let totalPaid = 0;

            // Sum all payment amounts
            $('.payment-amount').each(function () {
                let val = parseFloat($(this).val().replace(/,/g, '')) || 0;
                totalPaid += val;
            });

            // Fallback: if .payment-amounts are not used, use single input (legacy)
            if (totalPaid === 0) {
                const paidInput = document.getElementById('paidAmount');
                if (paidInput) {
                    totalPaid = parseFloat(paidInput.value.replace(/,/g, '')) || 0;
                }
            }

            // Get grand total
            let grandText = $('#grandTotal').text().replace(/[^\d.-]/g, '');
            let grandTotal = parseFloat(grandText) || 0;

            if (totalPaid < grandTotal) {
                hideLoader?.();
                $('#paymentError').show().text(
                    `Total paid (${totalPaid.toLocaleString(locale, { style: 'currency', currency })}) is less than order total (${grandTotal.toLocaleString(locale, { style: 'currency', currency })}).`
                );
                return false;
            }

            // Check if SalesPerson is selected
            const salesBy = document.getElementById('SalesBy').value.trim();
            if (!salesBy) {
                hideLoader?.();
                toastr.warning('Please select a Sales Person before placing the order.');
                return false;
            }

            // Use SweetAlert for confirmation
            Swal.fire({
                title: 'Confirm Order',
                text: "Are you sure you want to place this order?",
                icon: 'question',
                confirmButtonColor: '#0d6efd',
                showCancelButton: true,
    confirmButtonText: '<i class="fas fa-check me-2"></i> Yes, place it',
    cancelButtonText: '<i class="fas fa-times me-2"></i> Cancel',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    showLoader();
                    formIsDirty = false;
                    e.target.submit(); // Manually submit the form
                } else {
                    hideLoader?.();
                }
            });
        });
    </script>

