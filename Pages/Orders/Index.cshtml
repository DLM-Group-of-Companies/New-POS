@page
@model NLI_POS.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "Order";
}

<h1>Order</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].ItemNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Customers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Office)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Qty)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Order[0].Products)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Amount)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Order)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customers.FirstName) @Html.DisplayFor(modelItem => item.Customers.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Office.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Qty)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.Products.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>

                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
