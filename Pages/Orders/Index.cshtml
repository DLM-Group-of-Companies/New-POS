@section Scripts {
    <script>
        $(document).ready(function () {
            $('#ordersTable').DataTable({
                ajax: {
                    url: '@Url.Page("Index", "Orders")', // Points to OnGetOrders
                    dataSrc: 'data'
                },
                columns: [
                    { data: 'orderNo' },
                    { data: 'orderDate' },
                    { data: 'itemNo' },
                    { data: 'customerName' },
                    { data: 'office' },
                    { data: 'qty' },
                    { data: 'productName' },
                    { data: 'amount' },
                    {
                        data: 'Id',
                        render: function (data) {
                            return `
                                        <a href="/Orders/Edit?id=${data}">Edit</a> |
                                        <a href="/Orders/Details?id=${data}">Details</a> |
                                        <a href="/Orders/Delete?id=${data}">Delete</a>
                                    `;
                        }
                    }
                ],
                responsive: true,
                dom: 'Bfrtip',
                buttons: ['copy', 'csv', 'excel', 'pdf', 'print']
            });
        });
    </script>
}