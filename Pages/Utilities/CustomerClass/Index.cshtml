@page
@model NLI_POS.Pages.Utilities.CustomerClass.IndexModel

@{
    ViewData["Title"] = "Customer Class";
}

<div class="container mt-4">
    <div class="card border-0 shadow rounded-4 p-4 mx-auto" style="max-width: 720px;">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-primary mb-0">
                <i class="fas fa-user-friends me-2"></i> @ViewData["Title"]
            </h4>
            <i class="fas fa-window-close fa-2xl text-danger" role="button" title="Close" onclick="window.location = '/';"></i>
        </div>

        <hr />

        <p>
            <a asp-page="Create" class="btn btn-primary"><i class="far fa-plus-square me-2"></i>Add New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CustClass[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CustClass[0].Description)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CustClass)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>

                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm" title="Edit"><i class="far fa-edit"></i></a> 
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm" title="Details"><i class="fas fa-info-circle"></i></a> 
                            @* <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a> *@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>