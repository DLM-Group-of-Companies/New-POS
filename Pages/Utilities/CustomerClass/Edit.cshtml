                    </div>
                    <div class="form-group">
                        <label asp-for="CustClass.UpdateDate" class="control-label"></label>
                        <input asp-for="CustClass.UpdateDate" class="form-control" />
                        <span asp-validation-for="CustClass.UpdateDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustClass.UpdatedBy" class="control-label"></label>
                        <input asp-for="CustClass.UpdatedBy" class="form-control" />
