@page
@model NLI_POS.Pages.Utilities.PaymentMethods.CreateModel

@{
    ViewData["Title"] = "New Payment Method";
}

<div class="container-fluid d-flex justify-content-center mt-5">
    <div class="card shadow-lg rounded-4 p-4" style="max-width: 500px; width: 100%;">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-primary mb-0">
                <i class="far fa-credit-card me-2"></i> @ViewData["Title"]
            </h4>
            <i class="fas fa-window-close fa-2xl text-danger" role="button" title="Close" onclick="window.location = './Index';"></i>
        </div>
        <hr class="mb-4" />

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="PaymentMethods.Name" class="form-label">
                    Name <span class="text-danger">*</span>
                </label>
                <input asp-for="PaymentMethods.Name" class="form-control" placeholder="Enter payment method name" />
                <span asp-validation-for="PaymentMethods.Name" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PaymentMethods.Description" class="form-label">Description</label>
                <input asp-for="PaymentMethods.Description" class="form-control" placeholder="Optional description" />
                <span asp-validation-for="PaymentMethods.Description" class="text-danger small"></span>
            </div>
            <div class="form-group form-check form-switch">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PaymentMethods.IsActive" /> Active
                </label>
            </div>
            <div class="d-flex justify-content-end">
                <a asp-page="Index" class="btn btn-secondary me-2"><i class="fas fa-chevron-circle-left me-2"></i>Cancel</a>
                <button type="submit" class="btn btn-primary"><i class="fas fa-plus-circle me-2"></i>Add</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
