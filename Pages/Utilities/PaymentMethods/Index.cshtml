@page
@model NLI_POS.Pages.Utilities.PaymentMethods.IndexModel

@{
    ViewData["Title"] = "Payment Methods";
}

<div class="container mt-4">
    <div class="card border-0 shadow rounded-4 p-4 mx-auto" style="max-width: 720px;">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-primary mb-0">
                <i class="far fa-credit-card me-2"></i> @ViewData["Title"]
            </h4>
            <i class="fas fa-window-close fa-2xl text-danger" role="button" title="Close" onclick="window.location = '/';"></i>
        </div>
        <hr />

        <p>
            <a asp-page="Create" class="btn btn-primary">
                <i class="fas fa-plus-square me-2"></i> Add New
            </a>
        </p>

        <div class="table-responsive">
            <table class="table table-striped table-sm align-middle">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.PaymentMethods[0].Name)</th>
                        <th>@Html.DisplayNameFor(m => m.PaymentMethods[0].Description)</th>
                        <th>Active</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PaymentMethods)
                    {
                        var cl = "";
                        if (!item.IsActive)
                        {
                            cl = "text-muted";
                        }
                        <tr class="@cl">
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@if(item.IsActive)
                                {
                                    <i class="far fa-check-square fa-xl text-info"></i>
                                }
                            </td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm" title="Edit"><i class="far fa-edit"></i></a>
                                @* <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm" title="Details"><i class="fas fa-info-circle"></i></a> *@
                                @* <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Delete"><i class="fas fa-trash-alt"></i></a> *@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
