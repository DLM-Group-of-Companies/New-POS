@page
@model NLI_POS.Pages.Utilities.ProdutcTypes.IndexModel

@{
    ViewData["Title"] = "Product Types";
}

<div class="container mt-4">
    <div class="card border-0 shadow rounded-4 p-4 mx-auto" style="max-width: 720px;">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-primary mb-0">
                <i class="fas fa-user-friends me-2"></i> @ViewData["Title"]
            </h4>
            <i class="fas fa-window-close fa-2xl text-danger" role="button" title="Close" onclick="window.location = '/';"></i>
        </div>

        <p>
            <a asp-page="Create" class="btn btn-primary"><i class="far fa-plus-square me-2"></i>Add New</a>
        </p>
        <table id="productTypesTable" class="table table-striped table-hover nowrap" style="width:100%">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProductType[0].Name)</th>
                    <th>@Html.DisplayNameFor(model => model.ProductType[0].Description)</th>
                    <th>@Html.DisplayNameFor(model => model.ProductType[0].IsActive)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ProductType)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm me-1" title="Edit">
                                <i class="far fa-edit"></i>
                            </a>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm" title="Details">
                                <i class="fas fa-info-circle"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#productTypesTable').DataTable({
            responsive: true,
            pageLength: 10,
            columnDefs: [{ targets: -1, orderable: false }]
        });
    });
</script>