@page
@model ChangeModel
@{
    Layout = null;
}

<div class="justify-content-center">
    <input type="hidden" id="selectedBackground" />
    @Html.AntiForgeryToken()
    <div class="d-flex justify-content-center flex-wrap gap-3" id="background-slider">
        @foreach (var img in Model.ImagePaths)
        {
            <span class="border"> <img src="@img" class="bg-thumb" style="width: 150px; height: 100px; cursor: pointer;" /></span>
        }
    </div>

    <div class="mt-3 text-end">
        <button type="button" id="saveBgBtn" class="btn btn-primary"><i class="fas fa-exchange-alt me-2"></i> Apply Background</button>
    </div>
</div>
