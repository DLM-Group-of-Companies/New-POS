@model NLI_POS.Pages.Inventory.Office.IndexModel.ConvertInventoryModel


<form method="post" asp-page-handler="Convert" id="convertForm">

    @Html.AntiForgeryToken()

    <div class="modal-header">
        <h5 class="modal-title">Convert to Sachets</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>

    <div class="modal-body">

        <input type="hidden" asp-for="FromProductId" />
        <input type="hidden" asp-for="LocationId" />

        <div class="mb-3">
            <label class="form-label">Convert Quantity (Boxes)</label>
            <input asp-for="ConvertQty"
                   type="number"
                   min="1"
                   class="form-control"
                   required />
        </div>

    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary"
                data-bs-dismiss="modal">
            Cancel
        </button>

        <button type="submit" class="btn btn-warning">
            Convert
        </button>
    </div>

</form>


