@page
@model NLI_POS.Pages.Inventory.Office.IndexModel

@{
    ViewData["Title"] = "Inventory";
}

<div class="container-fluid bg-white bg-gradient shadow p-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0 text-primary">
            <i class="fas fa-boxes"></i> Inventory
        </h4>
        <i class="fas fa-window-close fa-2xl text-danger" role="button" title="Close" onclick="window.location = '../Index';"></i>
    </div>
    <hr />
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-2 mb-2">
            <partial name="_InventorySubNavPartial" />
        </div>

        <!-- Main Content -->
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="text-primary fw-bold mb-3">Offices Inventory</h5>
                    <div class="row mb-3">
                        <div class="col-lg-9">
                             @* <a id="addNewBtn" class="btn btn-primary"><i class="far fa-plus-square"></i> Add New</a> *@
                        </div>
                        <div class="col-lg-3 ">
                            <label asp-for="locationId" class="form-label fw-bold"></label>
                            <select id="locationId" asp-for="locationId" class="form-control form-select" asp-items="ViewBag.LocationId"></select>
                        </div>
                    </div>

                    <ul class="nav nav-tabs bg-light" id="inventoryTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active " id="main-tab" data-bs-toggle="tab" data-bs-target="#main" type="button" role="tab" aria-controls="main" aria-selected="true">Main Products</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link " id="coll-tab" data-bs-toggle="tab" data-bs-target="#coll" type="button" role="tab" aria-controls="coll" aria-selected="false">Marketing Collateral</button>
                        </li>
                    </ul>

                    <div class="tab-content p-3 border border-1 border-secondary" id="inventoryTabsContent">
                        <div class="tab-pane fade show active" id="main" role="tabpanel" aria-labelledby="main-tab">
                            <table id="mainTable" class="table table-primary table-striped align-middle">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Description</th>
                                        <th class="text-end">Stock</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>

                        <div class="tab-pane fade" id="coll" role="tabpanel" aria-labelledby="coll-tab">
                            <table id="collTable" class="table table-primary  table-striped align-middle">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Description</th>
                                        <th class="text-end">Stock</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered ">
        <div class="modal-content">
            <!-- Optional: Modal header -->
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Inventory</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body p-4">
                <!-- Spinner -->
                <div id="editInventoryModalLoader" class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>

                <!-- Loaded form content -->
                <div id="editInventoryModalContent" style="display: none;"></div>
            </div>
        </div>
    </div>
</div>

<!-- Transfer Modal Placeholder -->
<div class="modal fade" id="transferModal" tabindex="-1" aria-labelledby="transferModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="transferModalContent">
            <!-- AJAX-loaded partial goes here -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            showLoader();
            var mainTable = $('#mainTable').DataTable({
                ajax: {
                    url: '@Url.Page("Index", "Main")',
                    data: function (d) {
                        d.LocationId = $('#locationId').val();
                    },
                    dataSrc: 'data',
                    error: function (xhr, error, thrown) {
                        console.warn('DataTable error:', error);
                        hideLoader(); // still hide loader even on failure
                    },
                    complete: function () {
                        hideLoader(); // hide only when done
                    }
                },
                columns: [
                    { data: 'productName' },
                    { data: 'productDescription' },
                    {
                        data: 'stockQty',
                        className: 'text-end',
                        orderable: false,
                        render: function (data) {
                            return data != null ? data.toLocaleString() : '0';
                        }
                    },
                    {
                        data: 'id',
                        orderable: false,
                        render: function (data, type, row) {
                            return `
                                                <button class="btn btn-info btn-sm transfer-btn text-white"
                                                        data-id="${data}"
                                                        data-product-id="${row.productId}"
                                                        data-location-id="${$('#locationId').val()}"
                                                        title="Transfer stock">
                                                        <i class="fas fa-random me-1"></i>
                                                </button>`;
                        }
                    }
                ],
                responsive: true,
                dom: 'Bfrtip',
                buttons: ['copy', 'csv', 'excel', 'pdf', 'print']
            });

            var collTable = $('#collTable').DataTable({
                ajax: {
                    url: '@Url.Page("Index", "Collateral")',
                    data: function (d) {
                        d.LocationId = $('#locationId').val();
                    },
                    dataSrc: 'data'
                },
                columns: [
                    { data: 'productName' },
                    { data: 'productDescription' },
                    {
                        data: 'stockQty',
                        className: 'text-end',
                        orderable: false,
                        render: function (data) {
                            return data != null ? data.toLocaleString() : '0';
                        }
                    },
                    {
                        data: 'id',
                        orderable: false,
                        render: function (data, type, row) {
                            return `
                                                <button class="btn btn-info btn-sm transfer-btn text-white"
                                                        data-id="${data}"
                                                        data-product-id="${row.productId}"
                                                        data-location-id="${$('#locationId').val()}"
                                                        title="Transfer stock">
                                                        <i class="fas fa-random me-1"></i>
                                                </button>`;
                        }
                    }
                ],
                responsive: true,
                dom: 'Bfrtip',
                buttons: ['copy', 'csv', 'excel', 'pdf', 'print']
            });

            $('a[data-bs-toggle="tab"]').on('shown.bs.tab', function (e) {
                $.fn.dataTable
                    .tables({ visible: true, api: true })
                    .columns.adjust()
                    .responsive.recalc();
            });

            $('#locationId').on('change', function () {
                showLoader();
                mainTable.ajax.reload();
                collTable.ajax.reload();
            });
        });

        document.getElementById("addNewBtn").addEventListener("click", function () {
            const officeId = document.getElementById("officeId").value;
            if (officeId) {
                window.location.href = `/Inventory/Create?officeId=${officeId}`;
            } else {
                alert("Please select an office.");
            }
        });
    </script>

    <script>
        $(document).on('click', '.edit-btn', function () {
            const id = $(this).data('id');
            const url = `/Inventory/Edit?id=${id}&handler=Partial`;

            $('#editInventoryModalLoader').show();                // show spinner
            $('#editInventoryModalContent').hide().empty();       // clear previous content

            $('#editModal').modal('show');                        // show modal

            // Load partial view
            $('#editInventoryModalContent').load(url, function () {
                $('#editInventoryModalLoader').hide();            // hide spinner
                $('#editInventoryModalContent').fadeIn();         // show content
            });
        });
    </script>

    @* //For transfers *@
    <script>
        $(document).on('click', '.transfer-btn', function () {
            const productId = $(this).data('product-id');
            const locationId = $('#locationId').val(); // <- this gets the latest value

            if (!locationId || locationId === '0') {
                Swal.fire('Missing Location', 'Please select a location first.', 'warning');
                return;
            }

            $.get('/Inventory/Stockroom?handler=TransferPartial', {
                locationId: locationId,
                productId: productId
            }).done(function (html) {
                $('#transferModal .modal-content').html(html);
                const modal = new bootstrap.Modal(document.getElementById('transferModal'));
                modal.show();
            });
        });

        $(document).on('submit', '#transferForm', function (e) {
            e.preventDefault();

            // Gather form data
            const formData = {
                FromLocationId: $('#FromLocationId').val(),
                ToLocationId: $('#ToLocationId').val(),
                ProductId: $('#ProductId').val(),
                Quantity: parseInt($('#Quantity').val(), 10)
            };
            const productName = $('#ProductName').val();
            // Show confirmation dialog
            Swal.fire({
                title: 'Confirm Transfer',
                html: `
                    <div class="row text-start">
                        <div class="col-3 p-2"><strong>Product:</strong></div><div class="col-9  p-2 text-start"> ${productName}</div>
                        <div class="col-3 p-2"><strong>From:</strong></div><div class="col-9 p-2 text-start">  ${$('#FromLocationId option:selected').text()}</div>
                        <div class="col-3 p-2"><strong>To:</strong></div><div class="col-9 p-2 text-start">  ${$('#ToLocationId option:selected').text()}</div>
                        <div class="col-3 p-2"><strong>Quantity:</strong></div><div class="col-9 p-2 text-start">  ${formData.Quantity}</div>
                    </div>
                    `,
                icon: 'question',
                customClass: {
                    popup: 'border border-secondary shadow rounded',
                    title: 'fs-10 text-primary',
                    confirmButton: 'btn btn-primary me-2',
                    cancelButton: 'btn btn-outline-secondary'
                },
                buttonsStyling: false,
                showCancelButton: true,
                confirmButtonText: '<i class="fas fa-check me-2"></i> Yes, Transfer',
                cancelButtonText: '<i class="fas fa-times me-2"></i> Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Proceed with transfer
                    $.ajax({
                        url: '/Inventory/Offices?handler=Transfer',
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify(formData),
                        beforeSend: function (xhr) {
                            const token = $('input[name="__RequestVerificationToken"]').val();
                            if (token) {
                                xhr.setRequestHeader("RequestVerificationToken", token);
                            }
                        },
                        success: function (response) {
                            if (response.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Transfer complete!',
                                    text: response.message || 'Inventory was transferred successfully.'
                                }).then(() => {
                                    $('#transferModal').modal('hide');
                                    $('#mainTable').DataTable().ajax.reload(null, false);
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Transfer failed',
                                    text: response.message || 'Something went wrong.'
                                });
                            }
                        },
                        error: function () {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: 'Unable to complete the transfer. Please try again.'
                            });
                        }
                    });
                }
            });
        });
    </script>
}
