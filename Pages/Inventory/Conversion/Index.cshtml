@page
@model NLI_POS.Pages.Inventory.Conversion.IndexModel
@{
    ViewData["Title"] = "Product Conversion Setting";
}
<div class="container mt-4">
    <div class="card border-0 shadow rounded-4 p-4 mx-auto" style="max-width: 720px;">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-primary mb-0">
                <i class="fa-solid fa-random me-2"></i> @ViewData["Title"]
            </h4>
            <i class="fas fa-window-close fa-2xl text-danger" role="button" title="Close" onclick="window.location = '/';"></i>
        </div>

        <hr />
        <p>
        <button class="btn btn-primary mb-3"
                onclick="openConversionModal()">
                <i class="fas fa-plus-square me-2"></i> Add Conversion Rule
        </button>
        </p>
        <table class="table table-bordered">
            <thead>
                <tr class="table-info">
                    <th>From</th>
                    <th>To</th>
                    <th>Qty</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Conversions)
                {
                    <tr class="align-middle">
                        <td>@item.FromProduct.ProductName</td>
                        <td>@item.ToProduct.ProductName</td>
                        <td>@item.ConversionQty</td>
                        <td>
                            <button class="btn btn-sm btn-success"
                                    onclick="openConversionModal(@item.Id)"
                                    title="Edit">
                                <i class="far fa-edit"></i>
                            </button>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div id="conversionModalContainer"></div>
</div>
@section Scripts {
    <script>
        function openConversionModal(id = null) {
            let url = '?handler=CreateEdit';
            if (id) url += '&id=' + id;

            $('#conversionModalContainer').load(url, function () {
                $('#conversionModal').modal('show');
            });
        }

        function saveConversion() {
            $.ajax({
                url: '@Url.Page("./Index", null, new { handler = "Save" })',
                type: 'POST',
                data: $('#conversionForm').serialize(),
                success: function (res) {
                    if (res.success) {
                        location.reload();
                    } else {
                        toastr.error(res.message || 'Save failed.');
                    }
                },
                error: function (xhr) {
                    toastr.error(xhr.responseText || 'Server error occurred.');
                }
            });
        }

    </script>
}
