@page
@model NLI_POS.Pages.Inventory.CreateModel

@{
    ViewData["Title"] = "Inventory";
}
<div class="container my-4">
    <div class="bg-white shadow rounded-4 p-4 mx-auto" style="max-width: 600px;">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">
                <i class="fas fa-layer-group text-primary me-2"></i> Add Inventory Stock
            </h4>
            <a title="Close" class="text-danger fa-xl" role="button" onclick="window.location = './Index';">
                <i class="fas fa-window-close"></i>
            </a>
        </div>

        <hr />

        <form method="post" onsubmit="return validateAndShowLoader(this)">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="InventoryStock.OfficeId" class="form-label"></label>
                <select asp-for="InventoryStock.OfficeId" class="form-select" asp-items="ViewBag.OfficeId"></select>
            </div>

            <div class="mb-3">
                <label asp-for="InventoryStock.ProductId" class="form-label"></label>
                <select asp-for="InventoryStock.ProductId" class="form-select" asp-items="ViewBag.ProductId"></select>
            </div>

            <div class="mb-3">
                <label asp-for="InventoryStock.StockQty" class="form-label"></label>
                <input asp-for="InventoryStock.StockQty" class="form-control" />
                <span asp-validation-for="InventoryStock.StockQty" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="InventoryStock.Remarks" class="form-label"></label>
                <textarea asp-for="InventoryStock.Remarks" class="form-control" rows="3"></textarea>
                <span asp-validation-for="InventoryStock.Remarks" class="text-danger small"></span>
            </div>

            <div class="mt-4 text-end">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="far fa-save me-1"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
