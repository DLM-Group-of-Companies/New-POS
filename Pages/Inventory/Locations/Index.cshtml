@page
@model Locations.IndexModel
@{
    ViewData["Title"] = "Inventory Locations";
}
<div class="container-fluid bg-white bg-gradient shadow p-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0 text-primary">
            <i class="fas fa-boxes"></i> Inventory
        </h4>
        <i class="fas fa-window-close fa-2xl text-danger" role="button" title="Close" onclick="window.location = '../Index';"></i>
    </div>
    <hr />
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-2 mb-2">
            <partial name="_InventorySubNavPartial" />
        </div>

        <!-- Main Content -->
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="text-primary fw-bold mb-3">Inventory Locations</h5>
                        <a asp-page="Create" class="btn btn-primary"><i class="fas fa-plus me-2"></i> New Location</a>
                    </div>

                    <table id="locationsTable" class="table table-warning table-bordered table-striped">
                        <thead class="table-secondary">
                            <tr>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Office</th>
                                <th>Status</th>
                                <th style="width:150px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var loc in Model.InventoryLocations)
                            {
                                <tr>
                                    <td>@loc.Name</td>
                                    <td>@loc.LocationType</td>
                                    <td>@loc.Office?.Name</td>
                                    <td>
                                        <span class="badge bg-opacity-75 @(loc.IsActive ? "bg-success" : "bg-secondary")">
                                            @(loc.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>
                                        <a asp-page="Edit" asp-route-id="@loc.Id" class="btn btn-sm btn-success"><i class="fa-solid fa-pen-to-square"></i> </a>
                                        <form method="post" asp-page-handler="ToggleActive" asp-route-id="@loc.Id" class="d-inline toggle-form">
                                            <button type="button"
                                                    class="opacity-75 btn btn-sm @(loc.IsActive ? "btn-danger" : "btn-success") toggle-btn"
                                                    title="@(loc.IsActive ? "Click to deactivate" : "Click to activate")"
                                                    data-id="@loc.Id"
                                                    data-action="@(loc.IsActive ? "deactivate" : "activate")">
                                                @if (loc.IsActive)
                                                {
                                                    <i class="fas fa-ban"></i>
                                                }
                                                else
                                                {
                                                    <i class="fas fa-check"></i>
                                                }
                                            </button>
                                        </form>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(function () {
            $('#locationsTable').DataTable({
                ordering: false
            });
        });
    </script>

    <script>
        document.querySelectorAll('.toggle-btn').forEach(button => {
            button.addEventListener('click', function (e) {
                const form = this.closest('form');
                const action = this.getAttribute('data-action');

                Swal.fire({
                    icon: 'warning',
                    title: 'Are you sure?',
                    text: `You are about to ${action} this location.`,
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: `<i class="fas fa-check-circle me-1"></i> Yes, ${action}`,
                    cancelButtonText: 'Cancel',
                    customClass: {
                        popup: 'rounded shadow',
                        confirmButton: 'btn btn-primary me-2',
                        cancelButton: 'btn btn-secondary'
                    },
                    buttonsStyling: false
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        });
    </script>

}
