@page
@model NLI_POS.Pages.ProductCombos.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ProductCombo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
       <form method="post" onsubmit="return validateAndShowLoader(this)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductCombo.Id" />
            <div class="form-group">
                <label asp-for="ProductCombo.ProductId" class="control-label"></label>
                <select asp-for="ProductCombo.ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                <span asp-validation-for="ProductCombo.ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCombo.ProductIdList" class="control-label"></label>
                <input asp-for="ProductCombo.ProductIdList" class="form-control" />
                <span asp-validation-for="ProductCombo.ProductIdList" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCombo.ProductsDesc" class="control-label"></label>
                <input asp-for="ProductCombo.ProductsDesc" class="form-control" />
                <span asp-validation-for="ProductCombo.ProductsDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCombo.QuantityList" class="control-label"></label>
                <input asp-for="ProductCombo.QuantityList" class="form-control" />
                <span asp-validation-for="ProductCombo.QuantityList" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
