@page
@model NLI_POS.Pages.Customers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="container bg-light p-3 rounded border shadow">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0 text-primary">
            <i class="fas fa-address-card me-2"></i> Details
        </h4>
        <i class="fas fa-window-close fa-2xl text-danger" role="button" title="Close" onclick="window.location = './Index';"></i>
    </div>
    <hr />

    <!-- Nav tabs -->
    <ul class="nav nav-tabs" id="customerTabs" role="tablist">
        <li class="nav-item border" role="presentation">
            <button class="nav-link active border-bottom-0" id="details-tab" data-bs-toggle="tab" data-bs-target="#details" type="button" role="tab" aria-controls="details" aria-selected="true">
                Customer Information
            </button>
        </li>
        <li class="nav-item border" role="presentation">
            <button class="nav-link" id="history-tab" data-bs-toggle="tab" data-bs-target="#history" type="button" role="tab" aria-controls="history" aria-selected="false">
                Order History
            </button>
        </li>
    </ul>

    <div class="tab-content border border-1 border-secondary bg-white">
        <!-- Customer Details Tab -->
        <div class="tab-pane fade show active" id="details" role="tabpanel" aria-labelledby="details-tab">
            <div class="card card-body">

                <div class="row">
                    <div class="pt-2 col-12 col-sm-4 col-md-4 col-lg-4 col-xl-4">
                        <label class="control-label">Customer Code</label>
                        <label class="form-control">@Html.DisplayFor(model => model.Customer.CustCode)</label>
                    </div>

                    <div class="pt-2 col-12 col-sm-4 col-md-4 col-lg-4 col-xl-4">
                        <label class="control-label">Office</label>
                        <label class="form-control">@Html.DisplayFor(model => model.Customer.OfficeCountry.Name)</label>
                    </div>

                    <div class="pt-2 col-12 col-sm-4 col-md-4 col-lg-4 col-xl-4">
                        <label class="control-label">Customer Class</label>
                        <label class="form-control">@Html.DisplayFor(model => model.Customer.CustClasses.Name)</label>
                    </div>
                </div>

                <hr />

                <div class="row">
                    <div class="pt-2 col-12 col-sm-4 col-md-4 col-lg-4 col-xl-4">
                        <label class="control-label">First Name</label>
                        <label class="form-control">@Html.DisplayFor(model => model.Customer.FirstName)</label>
                    </div>

                    <div class="pt-2 col-12 col-sm-4 col-md-4 col-lg-4 col-xl-4">
                        <label class="control-label">Middle Name</label>
                        <label class="form-control">@Html.DisplayFor(model => model.Customer.MiddleName)&nbsp;</label>
                    </div>

                    <div class="pt-2 col-12 col-sm-4 col-md-4 col-lg-4 col-xl-4">
                        <label class="control-label">Last Name</label>
                        <label class="form-control">@Html.DisplayFor(model => model.Customer.LastName)</label>
                    </div>

                </div>
                <div class="row">
                    <div class="pt-2 col-12 col-sm-4 col-md-4 col-lg-4 col-xl-4">
                        @Html.DisplayNameFor(model => model.Customer.Email)
                        <label class="form-control">@Html.DisplayFor(model => model.Customer.Email)&nbsp;</label>
                    </div>
                    <div class="pt-2 col-12 col-sm-4 col-md-4 col-lg-4 col-xl-4">
                        <label class="control-label">Mobile Number</label>
                        <label class="form-control">@Html.DisplayFor(model => model.Customer.MobileNo)&nbsp;</label>
                    </div>
                    <div class="pt-2 col-12 col-sm-4 col-md-4 col-lg-4 col-xl-4">
                        <label class="control-label">Landline Number</label>
                        <label class="form-control">@Html.DisplayFor(model => model.Customer.LandlineNo)&nbsp;</label>
                    </div>
                </div>
                <div class="row">
                    <div class="pt-2 col-12 col-sm-3 col-md-3 col-lg-3 col-xl-3">
                        @Html.DisplayNameFor(model => model.Customer.Gender)
                        <label class="form-control">@Html.DisplayFor(model => model.Customer.Gender)</label>
                    </div>

                    <div class="pt-2 col-12 col-sm-3 col-md-3 col-lg-3 col-xl-3">
                        @Html.DisplayNameFor(model => model.Customer.Birthday)
                        <label class="form-control">@Html.DisplayFor(model => model.Customer.Birthday)</label>
                    </div>

                    <div class="pt-2 col-12 col-sm-3 col-md-3 col-lg-3 col-xl-3">
                        <label class="control-label">Civil Status</label>
                        <label class="form-control">@Html.DisplayFor(model => model.Customer.CivilStat)</label>
                    </div>

                    <div class="pt-2 col-12 col-sm-3 col-md-3 col-lg-3 col-xl-3">
                        @Html.DisplayNameFor(model => model.Customer.Nationality)
                        <label class="form-control">@Html.DisplayFor(model => model.Customer.Nationality)&nbsp;</label>
                    </div>

                </div>
                <div class="row">
                    <div class="pt-2 col-12 col-sm-4 col-md-4 col-lg-4 col-xl-4">
                        @Html.DisplayNameFor(model => model.Customer.Country)
                        <label class="form-control">@ViewData["Country"]</label>
                    </div>

                    <div class="pt-2 col-12 col-sm-4 col-md-4 col-lg-4 col-xl-4">
                        @Html.DisplayNameFor(model => model.Customer.Province)
                        <label class="form-control">@Html.DisplayFor(model => model.Customer.Province)&nbsp;</label>
                    </div>

                    <div class="pt-2 col-12 col-sm-4 col-md-4 col-lg-4 col-xl-4">
                        @Html.DisplayNameFor(model => model.Customer.City)
                        <label class="form-control">@Html.DisplayFor(model => model.Customer.City)&nbsp;</label>
                    </div>

                </div>

                <div class="row">
                    <div class="pt-2 col-12 col-sm-5 col-md-5 col-lg-5 col-xl-5">
                        @Html.DisplayNameFor(model => model.Customer.Address1)
                        <label class="form-control">@Html.DisplayFor(model => model.Customer.Address1)&nbsp;</label>
                    </div>

                    <div class="pt-2 col-12 col-sm-5 col-md-5 col-lg-5 col-xl-5">
                        @Html.DisplayNameFor(model => model.Customer.Address2)
                        <label class="form-control">@Html.DisplayFor(model => model.Customer.Address2)&nbsp;</label>
                    </div>


                    <div class="pt-2 col-12 col-sm-2 col-md-2 col-lg-2 col-xl-2">
                        <label class="control-label">Postal Code</label>
                        <label class="form-control">@Html.DisplayFor(model => model.Customer.PostalCode)&nbsp;</label>
                    </div>
                </div>

                @if (User.IsInRole("Admin"))
                {
                    <div class="row">
                        <div class="pt-2 col-12 col-sm-3 col-md-3 col-lg-3 col-xl3">
                            Encoded Date
                            <label class="form-control">@Html.DisplayFor(model => model.Customer.EncodeDate)</label>
                        </div>
                        <div class="pt-2 col-12 col-sm-3 col-md-3 col-lg-3 col-xl3">
                            Encoded By
                            <label class="form-control">@Html.DisplayFor(model => model.Customer.EncodedBy)</label>
                        </div>
                        <div class="pt-2 col-12 col-sm-3 col-md-3 col-lg-3 col-xl3">
                            Updated Date
                            <label class="form-control">@Html.DisplayFor(model => model.Customer.UpdateDate)&nbsp;</label>
                        </div>
                        <div class="pt-2 col-12 col-sm-3 col-md-3 col-lg-3 col-xl3">
                            Updated By
                            <label class="form-control">@Html.DisplayFor(model => model.Customer.UpdatedBy)&nbsp;</label>
                        </div>
                    </div>

                    <div class="pt-4">
                        <a class="btn btn-success" asp-page="./Edit" asp-route-id="@Model.Customer.Id"><i class="fas fa-user-edit me-2"></i> Edit</a>
                        @* <a asp-page="./Index">Back to List</a> *@
                    </div>
                }
            </div>
        </div>

        <!-- Order History Tab -->
        <div class="tab-pane fade" id="history" role="tabpanel" aria-labelledby="history-tab">
            <div class="card card-body">

                <!-- Example table, you can replace this with a loop or DataTable -->
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Order No</th>
                            <th>Date</th>
                            <th>Amount</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Order)
                        {
                            <tr>
                                <td>@order.OrderNo</td>
                                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                                <td>@order.TotAmount.ToString("N2")</td>
                                <td>
                                    <a asp-page="/Orders/Details" asp-route-orderNo="@order.OrderNo">Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>