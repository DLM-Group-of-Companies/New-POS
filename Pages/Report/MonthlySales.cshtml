@using static NLI_POS.Services.BasePageModel
@model NLI_POS.Pages.Report.MonthlySalesNewModel

@{
    ViewData["Title"] = "Monthly Sales Pivot Report";
}

<div class="container-fluid bg-white bg-gradient shadow p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-primary mb-0">
            <i class="fas fa-calendar-alt me-2"></i> @ViewData["Title"]
        </h3>
        <i class="fas fa-window-close fa-2xl text-danger" role="button" title="Close" onclick="window.location = '../Index';"></i>
    </div>

    <hr />

    <div class="row g-3 mb-4">
        <form method="post" asp-page-handler="Show" class="row g-2 align-items-end mb-1" onsubmit="return validateAndShowLoader(this)">
            <div class="col-md-3">
                <label for="officeFilter" class="form-label">Office</label>

                <!-- NOTE: name must match the PageModel property OfficeId -->
                <select id="officeFilter" name="OfficeId" class="form-select" required onchange="setTimeZoneFromSelected(this)">
                    <option value="">Select Office</option>
                    @foreach (var office in Model.OfficeList ?? new List<OfficeSelectItem>())
                    {
                        <option value="@office.Value"
                                data-timezone="@office.TimeZone"
                                data-currency="@office.CurrencyCode"
                                selected="@(office.Value == Model.OfficeId?.ToString() ? "selected" : null)">
                            @office.Text
                        </option>
                    }
                </select>

                <!-- NOTE: name must match PageModel property TimeZoneId -->
                <input type="hidden" id="timeZoneInput" name="TimeZoneId" value="@Model.TimeZoneId" />
            </div>

            <div class="col-md-2">
                <label for="SelectedMonth" class="form-label">Month</label>
                <select name="SelectedMonth" class="form-control" required>
                    @for (int m = 1; m <= 12; m++)
                    {
                        var monthName = new DateTime(2000, m, 1).ToString("MMMM");
                        <option value="@m" selected="@(Model.SelectedMonth == m ? "selected" : null)">
                            @monthName
                        </option>
                    }
                </select>
            </div>

            <div class="col-md-2">
                <label for="SelectedYear" class="form-label">Year</label>
                <select name="SelectedYear" class="form-control" required>
                    @for (int y = DateTime.UtcNow.Year; y >= 2025; y--)
                    {
                        <option value="@y" selected="@(Model.SelectedYear == y ? "selected" : null)">
                            @y
                        </option>
                    }
                </select>

            </div>

            <div class="col-md-1">
                <button type="submit" class="btn btn-primary w-100"><i class="fas fa-filter me-2"></i> Filter</button>
            </div>
        </form>
    </div>

    @if (Model.PivotData is not null && Model.PivotData.Count > 0)
    {
        <hr />

        <!-- Export form: POST to Export handler. Use asp-for to bind hidden inputs properly -->
        <iframe id="downloadFrame" name="downloadFrame" style="display:none;"></iframe>

        <form method="post" asp-page-handler="Export">
            <input type="hidden" asp-for="OfficeId" />
            <input type="hidden" asp-for="TimeZoneId" />
            <input type="hidden" asp-for="SelectedMonth" />
            <input type="hidden" name="SelectedYear" value="@Model.SelectedYear" />

            <button class="btn btn-success mb-3">Export to Excel</button>
        </form>

        <div class="row">
            @{
                int totalTrans = 0; //Model.PivotData.Count();

                decimal totalAmount = Model.PivotData.Sum(row =>
                row.ContainsKey("Total Amount") && row["Total Amount"] != null
                ? Convert.ToDecimal(row["Total Amount"])
                : 0
                );
                decimal totalPrice = Model.PivotData.Sum(row =>
                row.ContainsKey("Unit Price") && row["Unit Price"] != null
                ? Convert.ToDecimal(row["Unit Price"])
                : 0
                );
            }
            <div class="col-12">
                <div class="table-responsive ">
                    <table id="pivotTable" class="table table-sm table-bordered table-striped mt-3 small">
                        <thead>
                            <tr class="table-success">
                                @* Use the first row's keys as columns (or prefer Model.PivotColumns if you added it) *@
                                @foreach (var col in Model.PivotData.First().Keys)
                                {
                                    // Don't display the IsVoided column
                                    //if (col == "Voided")
                                    if (col.Contains("void", StringComparison.OrdinalIgnoreCase) || col.Contains("encode", StringComparison.OrdinalIgnoreCase))                                                        
                                    {
                                        continue;
                                    }
                                    <th>@col</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var row in Model.PivotData.Where(r =>!r.TryGetValue("Voided", out var v) || v is not bool isVoided ||  !isVoided))
                            {
                                totalTrans++;
                                <tr>
                                    @foreach (var col in Model.PivotData.First().Keys)  @* ensure consistent order *@
                                    {
                                        // Don't display the Voided and Encoded columns
                                        if (col.Contains("void", StringComparison.OrdinalIgnoreCase) || col.Contains("encode", StringComparison.OrdinalIgnoreCase))
                                        {
                                            continue;
                                        }

                                        var value = row[col];

                                        if (value is decimal dec)
                                        {
                                            <td>@dec.ToString("N2")</td>
                                        }
                                        else
                                        {
                                            <td>@value</td>
                                        }
                                    }
                                </tr>
                            }
                    </tbody>
 @*                    <tfoot>
                        <tr>
                            <th colspan="3" style="text-align:right">TOTALS:</th>
                            <th>@totalTrans</th>
                            <th></th>
                            <th>
                                @Model.PivotData.Sum(row => Convert.ToInt32(row["Cleanse"]))
                            </th>
                            <th>
                                @Model.PivotData.Sum(row => Convert.ToInt32(row["Cleanse Sachet"]))
