                        </tr>
                    </tfoot> *@
                        <tfoot>
                            <tr class="table-warning fw-bold">

                                @foreach (var col in Model.PivotData.First().Keys)
                                {
                                    // Skip hidden columns EXACTLY like header/body
                                    if (col.Contains("void", StringComparison.OrdinalIgnoreCase) ||
                                    col.Contains("encode", StringComparison.OrdinalIgnoreCase))
                                    {
                                        continue;
                                    }

                                    // First visible column(s): label + transaction count
                                    if (col.Equals("Customer", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <th class="text-end">TOTALS</th>
                                        continue;
                                    }

                                    if (col.Equals("Product", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <th>Count: @totalTrans</th>
                                        continue;
                                    }

                                    decimal sum = 0;
                                    bool hasNumeric = false;

                                    foreach (var row in Model.PivotData.Where(r => !r.TryGetValue("Voided", out var v)
                                    || v is not bool isVoided
                                    || !isVoided))
                                    {
                                        if (row.TryGetValue(col, out var v) && v != null &&
                                        decimal.TryParse(v.ToString(), out var num))
                                        {
                                            sum += num;
                                            hasNumeric = true;
                                        }
                                    }

                                    if (!hasNumeric)
                                    {
                                        <th></th>
                                    }
                                    else if (col.Equals("Total Amount", StringComparison.OrdinalIgnoreCase) ||
                                    col.Equals("Unit Price", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <th>@sum.ToString("N2")</th>
                                    }
                                    else
                                    {
                                        <th>@Convert.ToInt32(sum)</th>
                                    }
                                }
                            </tr>
                        </tfoot>

                </table>
            </div>
        </div>
    </div>
        }
    <div id="pager" class="d-flex gap-1 justify-content-center mt-2 bg-white p-2"></div>
</div>

@section Scripts {
    <script>
        // when office select changes, update hidden timezone input with selected option's data-timezone
        function setTimeZoneFromSelected(select) {
            const opt = select.options[select.selectedIndex];
            const tz = opt?.dataset?.timezone || '';
            document.getElementById('timeZoneInput').value = tz;
        }

        // set timezone on page load based on current selection
        (function () {
            const sel = document.getElementById('officeFilter');
            if (sel) setTimeZoneFromSelected(sel);
        })();
    </script>

    <script>
        const rowsPerPage = 20;
        const table = document.getElementById("pivotTable");
        const rows = table.querySelectorAll("tbody tr");
        let currentPage = 1;

        function renderPage(page) {
            currentPage = page;
            const start = (page - 1) * rowsPerPage;
            const end = start + rowsPerPage;

            rows.forEach((row, index) => {
                row.style.display = index >= start && index < end ? "" : "none";
            });

            renderPager();
        }

        function renderPager() {
            const totalPages = Math.ceil(rows.length / rowsPerPage);
            const pager = document.getElementById("pager");
            pager.innerHTML = "";

            for (let i = 1; i <= totalPages; i++) {
                pager.innerHTML += `
                    <button class="btn btn-sm ${i === currentPage ? 'btn-primary' : 'btn-outline-primary'}"
                            onclick="renderPage(${i})">
                        ${i}
                    </button>`;
            }
        }

        renderPage(1);
    </script>
}
