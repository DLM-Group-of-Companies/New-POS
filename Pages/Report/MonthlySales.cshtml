                            </th>
                            <th>
                                @Model.PivotData.Sum(row => Convert.ToInt32(row["PPARs Plus"]))
                            </th>
                            <th>
                                @Model.PivotData.Sum(row => Convert.ToInt32(row["Item Qty"]))
                            </th>

                            <th>
                                @Model.PivotData.Sum(row => Convert.ToDecimal(row["Total Amount"])).ToString("N2")
