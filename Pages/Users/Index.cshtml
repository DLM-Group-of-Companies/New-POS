    </script>

    @* Call Modal for Claims and Roles *@
    <script>
        function loadAccessModal(userId) {
            $('#userAccessModalContainer').html(`<div class="text-center p-4">
                                    <div class="spinner-border text-primary" role="status"></div><p>Loading...</p></div>`);

            $.get(`/Users/UserAccess?userId=${userId}`, function (modalHtml) {
                $('#userAccessModalContainer').html(modalHtml);
                // const modal = new bootstrap.Modal(document.getElementById('userAccessModal'));
                const modal = bootstrap.Modal.getOrCreateInstance(document.getElementById('userAccessModal'));
                modal.show();
            });
        }

        $(document).on('submit', '#userAccessForm', function (e) {
            showLoader();
            e.preventDefault();
            const form = $(this);
            const data = form.serialize();

            $.post('/Users/UserAccess?handler=Assign', data)
                .done(function (res) {
                    if (res.success) {
                        hideLoader();
                        bootstrap.Modal.getInstance(document.getElementById('userAccessModal')).hide();
                        toastr.success('Roles and Access updated!');
                    }
                })
                .fail(function () {
                    hideLoader();
                    toastr.error('Error saving roles and claims.');
                });
        });

    </script>

}