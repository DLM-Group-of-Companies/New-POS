@using Microsoft.AspNetCore.Identity
@using NLI_POS.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav ms-auto text-light">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fas fa-user-circle fa-xl" title="Hello @User.FindFirst("FullName")?.Value!"></i>  <span class="d-sm-none d-lg-inline-block"> Hello @User.FindFirst("FullName")?.Value!</span></a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link "><i class="fas fa-sign-out-alt fa-xl" title="Logout"></i>  <span class="d-sm-none d-lg-inline-block"> Logout</span></button>
            </form>
        </li>

    }
    else
    {
        <li class="nav-item">
            <a class="nav-link " asp-area="Identity" asp-page="/Account/Register" title="Register"><i class="fas fa-user-plus fa-xl" title="Register"></i>  <span class="d-sm-none d-lg-inline-block"> Register</span> </a>
        </li>
        <li class="nav-item">
            <a class="nav-link " asp-area="Identity" asp-page="/Account/Login" title="Login"><i class="fas fa-sign-in-alt fa-xl" title="Login"></i>  <span class="d-sm-none d-lg-inline-block"> Login</span></a>
        </li>
    }
</ul>
