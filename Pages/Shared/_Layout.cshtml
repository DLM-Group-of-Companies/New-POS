@using Microsoft.AspNetCore.Identity
@using NLI_POS.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@inject ApplicationDbContext _context
@{
    var bgUrl = _context.SysParams.FirstOrDefault(x => x.Id == 1)?.Background.Replace("\\", "/");
}

@{
    var path = Context.Request.Path.ToString().ToLower();
    var isLoginPage = path.Contains("/identity/account/login");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="csrf-token" content="@Antiforgery.GetAndStoreTokens(Context).RequestToken" />

    <title>@ViewData["Title"] - NobleLife POS</title>
    @* Default *@
    <link id="bootstrap-theme" rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    @* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
    <script src="https://kit.fontawesome.com/cc42349d53.js" crossorigin="anonymous"></script>

    <!-- ✅ jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- ✅ DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">

    <!-- ✅ DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <!-- ✅ Responsive DataTables JS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.4.1/css/responsive.dataTables.min.css">
    <script src="https://cdn.datatables.net/responsive/2.4.1/js/dataTables.responsive.min.js"></script>

    <!-- Buttons extension CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.dataTables.min.css" />

    <!-- Buttons and export dependencies -->
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js">    </script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.colVis.min.js">    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>


    <!-- Include jQuery UI for .draggable() -->
    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css" />

    <!-- Toastr -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    @* <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- SweetAlert2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <! -- Chart -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

</head>
<body class="@((User.Identity?.IsAuthenticated ?? false) ? "with-sidebar" : "no-sidebar")">

    <div>
        @if (User.Identity.IsAuthenticated)
        {
            <!-- ✅ Sidebar for desktop (md+) only -->
            @* <div class="sidebar-desktop d-none d-md-block bg-dark text-white sidebar-scrollable"> *@
            <div class="sidebar-desktop d-none d-lg-block bg-dark text-white sidebar-scrollable">
                @await Html.PartialAsync("_SidebarPartial")
            </div>

            <!-- ✅ Mobile top navbar with logo and menu toggle -->
            @* <nav class="navbar navbar-dark bg-dark bg-gradient d-md-none w-100"> *@
            <nav class="navbar navbar-dark bg-dark bg-gradient d-lg-none w-100">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/">
                        <img src="~/images/noblelife-white.png" alt="Logo" height="30" />
                        POS
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
            </nav>

            <!-- ✅ Offcanvas for mobile only -->
            @* <div class="offcanvas offcanvas-start bg-dark bg-gradient text-white d-md-none" tabindex="-1" id="sidebarMenu" aria-labelledby="sidebarMenuLabel"> *@
            <div class="offcanvas offcanvas-start bg-dark bg-gradient text-white d-lg-none" tabindex="-1" id="sidebarMenu" aria-labelledby="sidebarMenuLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="sidebarMenuLabel">Menu</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    @await Html.PartialAsync("_SidebarPartial")
                </div>
            </div>
        }

        @* Daily Sales Popup Start *@
        <div id="todaySalesPopup" class="sales-popup shadow-lg rounded-3 p-3 bg-light border border-success">
            <div class="d-flex justify-content-between align-items-center mb-2 cursor-move" id="salesPopupHeader">
                <h5 class="text-success mb-0 d-flex align-items-center">
                    <i class="fas fa-coins me-1"></i> Today's Sales
                </h5>
                <i class="fas fa-window-close text-danger" role="button" onclick="closeSalesPopup();" title="Close"></i>
            </div>

            <div id="todaySalesContent">
                <div class="text-center my-2" id="salesLoader">
                    <div class="spinner-border text-primary" role="status" style="width: 2rem; height: 2rem;">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
        @* Popup End *@

        <!-- Change Background Modal -->
        <div class="modal fade" id="changebgModal" tabindex="-1" aria-labelledby="changebgModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered ">
                <div class="modal-content">
                    <!-- Optional: Modal header -->
                    <div class="modal-header">
                        <h5 class="modal-title text-primary" id="changebgModalLabel"><i class="fas fa-brush me-2"></i> Change Background</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body p-4 " id="changeBackgroundContent">
                        <div class="text-center">Loading backgrounds...</div>
                    </div>

                    <script>
                        const modal = document.getElementById('changebgModal');
                        modal.addEventListener('show.bs.modal', function () {
                            fetch('/Utilities/ChangeBackground/_ChangeBackgroundPartial')
                                .then(response => response.text())
                                .then(html => {
                                    document.getElementById('changeBackgroundContent').innerHTML = html;
                                });
                        });
                    </script>
                </div>
            </div>
        </div>

        <!-- Right Click menu -->
        <div class="flex-grow-1 " id="page-content">
            <div id="preloader" style="display:none;">
                <div class="loader"></div>
            </div>

            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <div id="customContextMenu" class="position-absolute bg-white border rounded shadow p-2 d-none" style="z-index: 9999; min-width: 220px;">
                    <div class="small">
                        <a href="#" class="dropdown-item menu-item pb-2 d-flex align-items-center" onclick="location.reload();">
                            <i class="fas fa-sync"></i>
                            <span>Refresh</span>
                        </a>

                        <a href="#" class="dropdown-item menu-item pb-2 d-flex align-items-center" data-bs-toggle="modal" data-bs-target="#changebgModal">
                            <i class="fas fa-brush"></i>
                            <span>Change Background</span>
                        </a>

                        <!-- Themes Menu -->
                        <div class="submenu-container position-relative">
                            <a href="#" class="dropdown-item menu-item pb-2">
                                <i class="fas fa-palette me-2"></i> Themes
                                <i class="fas fa-chevron-right float-end small mt-1"></i>
                            </a>
                            <div class="submenu bg-white border shadow rounded d-none position-absolute start-100 top-0 mt-0 ms-1">
                                <a href="#" class="dropdown-item pb-2 d-flex justify-content-between align-items-center" onclick="setTheme('default')">
                                    <span><i class="far fa-hand-point-right me-2"></i> Default</span>
                                    <i class="fas fa-check text-success d-none pe-3" id="check-default"></i>
                                </a>
                                <a href="#" class="dropdown-item pb-2 d-flex justify-content-between align-items-center" onclick="setTheme('pulse')">
                                    <span><i class="far fa-hand-point-right me-2"></i> Pulse</span>
                                    <i class="fas fa-check text-success d-none pe-3" id="check-pulse"></i>
                                </a>
                                <a href="#" class="dropdown-item pb-2 d-flex justify-content-between align-items-center" onclick="setTheme('flatly')">
                                    <span><i class="far fa-hand-point-right me-2"></i> Flatly</span>
                                    <i class="fas fa-check text-success d-none pe-3" id="check-flatly"></i>
                                </a>
                                <a href="#" class="dropdown-item pb-2 d-flex justify-content-between align-items-center" onclick="setTheme('lumen')">
                                    <span><i class="far fa-hand-point-right me-2"></i> Lumen</span>
                                    <i class="fas fa-check text-success d-none pe-3" id="check-lumen"></i>
                                </a>
                            </div>
                        </div>

                        <a href="~/Identity/Account/Logout?returnUrl=@Url.Page("/Index", new { area = "" })" class="dropdown-item menu-item pb-2 text-danger d-flex align-items-center">
                            <i class="fas fa-sign-out-alt me-2"></i> Logout
                        </a>
                    </div>
                </div>
            }

            <main role="main" class="main-content p-0 pb-4 ">
                @RenderBody()
            </main>
        </div>

    </div>

    <footer class="footer bg-black bg-gradient text-white text-center fixed-bottom">
        &copy; 2025 NobleLife International
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(function () {
        @if (TempData["SuccessMessage"] != null)
        {
            <text>toastr.success("@TempData["SuccessMessage"]");</text>
        }
        else if (TempData["ErrorMessage"] != null)
        {
            <text>toastr.error("@TempData["ErrorMessage"]");</text>
        }
                 });

        function validateAndShowLoader(form) {
            if (!form) return false;

            if (typeof $ !== "undefined" && typeof $.validator !== "undefined") {
                if (!$(form).valid()) return false;
            } else {
                if (!form.checkValidity()) return false;
            }

            showLoader();
            return true;
        }

        function showLoader() {
            document.getElementById("preloader").style.display = "flex";
        }

        function hideLoader() {
            const preloader = document.getElementById("preloader");
            if (preloader) preloader.style.display = "none";
        }

    </script>


    <script>
        // Call this after the page loads
        startClock("clock");
    </script>


    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const bgUrl = "@bgUrl";
            if (bgUrl) {
                document.body.style.backgroundImage = `url('${bgUrl}')`;
                document.body.style.backgroundSize = 'cover';
                document.body.style.backgroundPosition = 'center';
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("Notyf")
</body>

</html>