@using NLI_POS.Models.ViewModels
@model UserAccessViewModel

<form id="userAccessForm" method="post"  >
    @Html.AntiForgeryToken()
    <input type="hidden" name="userId" value="@Model.UserId" />

    <!-- User Info Card -->
    <div class="card mb-4 border-0 shadow-sm">
        <div class="card-body">
            <h5 class="card-title text-primary"><i class="fas fa-user me-2"></i>User Information</h5>
            <hr />
 
            <table class="table table-primary">
                <thead>
                    <tr class="fw-bold">
                        <td>Username</td>
                        <td>Full Name</td>
                        <td>Email</td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.UserName</td>
                        <td>@Model.FullName</td>
                        <td>@Model.Email</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Roles Card -->
    <div class="card mb-4 border-0 shadow-sm">
        <div class="card-body">
            <h5 class="card-title text-success"><i class="fas fa-user-shield me-2"></i>Assigned Roles</h5>
            <hr />
            <div class="row">
                @foreach (var role in Model.AvailableRoles)
                {
                    <div class="col-md-6 col-lg-4 mb-2">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" name="roles" value="@role"
                            @(Model.AssignedRoles.Contains(role) ? "checked" : "") />
                            <label class="form-check-label">@role</label>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Claims Card -->
    <div class="card mb-4 border-0 shadow-sm">
        <div class="card-body">
            <h5 class="card-title text-info"><i class="fas fa-key me-2"></i>Assigned Access</h5>
            <hr />
            <div class="row">
                @foreach (var claim in Model.AvailableClaims)
                {
                    <div class="col-md-6 col-lg-3 mb-2">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" name="claims" value="@claim.Value"
                            @(Model.AssignedClaims.Any(c => c.Value == claim.Value) ? "checked" : "") />
                            <label class="form-check-label">@claim.Value</label>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Footer Buttons -->
    <div class="text-end">
        <button type="submit" class="btn btn-success px-4">
            <i class="fas fa-save me-2"></i> Save 
        </button>
    </div>

</form>
