@using NLI_POS.Models
@model ProductCombo  

<h4>Model</h4>
<hr />
<div class="row">
    <div class="col-md-4">
       <form method="post" onsubmit="return validateAndShowLoader(this)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductIdList" class="control-label"></label>
                <input asp-for="ProductIdList" class="form-control" />
                <span asp-validation-for="ProductIdList" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductsDesc" class="control-label"></label>
                <input asp-for="ProductsDesc" class="form-control" />
                <span asp-validation-for="ProductsDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityList" class="control-label"></label>
                <input asp-for="QuantityList" class="form-control" />
                <span asp-validation-for="QuantityList" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
