@page
@model NLI_POS.Pages.UsersOfficeAccess.CreateModel

@{
    Layout = null;
    ViewData["Title"] = "Create";
}

<div class="container-fluid bg-white bg-gradient  shadow p-2">

    <form id="addAccessForm" method="post" onsubmit="return validateAndShowLoader(this)">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group p-2">
            <label asp-for="UserOfficeAccess.UserId" class="control-label"></label>
            <select asp-for="UserOfficeAccess.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
        </div>
        <div class="form-group p-2">
            <label asp-for="UserOfficeAccess.OfficeId" class="control-label"></label>
            <select asp-for="UserOfficeAccess.OfficeId" class="form-control" asp-items="ViewBag.OfficeId"></select>
        </div>

        <input asp-for="UserOfficeAccess.EncodedBy" type="hidden" value="@User.Identity?.Name" />

        <input asp-for="UserOfficeAccess.EncodeDate" type="hidden" value="@DateTime.UtcNow.AddHours(8)" />

        <div class="form-group text-center">
            <input type="submit" value="Add" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
