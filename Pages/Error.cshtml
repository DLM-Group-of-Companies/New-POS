@page
@model ErrorModel
@{
    ViewData["Title"] = "Unexpected Error";
}

<div class="container mt-5 d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="text-center border rounded p-4 shadow bg-white" style="max-width: 500px;">
        <div class="mb-3 text-danger">
            <i class="fas fa-exclamation-triangle fa-4x  fa-fade"></i>
        </div>
        <h4 class="text-danger">Oops! Something went wrong.</h4>
        <p class="text-muted">
            We've logged the error and notified our technical support team.
        </p>

        @if (Model.ShowRequestId)
        {
            <p class="text-secondary small">
                Error ID: <code>@Model.RequestId</code>
            </p>
        }

        <a href="/" class="btn btn-outline-primary mt-3">
            <i class="fas fa-home"></i> Return to Home
        </a>
    </div>
</div>
