@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<div class="container-fluid bg-white bg-gradient  shadow p-2">
    <h4>@ViewData["Title"]</h4>
    <partial name="_StatusMessage" for="StatusMessage" />
    <hr />
    <div class="row">
        <div>
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                    <label asp-for="Username" class="form-label"></label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Fullname" class="form-control text-capitalize" />
                    <label asp-for="Fullname"></label>

                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Designation" class="form-control" placeholder="Please enter your phone number." />
                    <label asp-for="Input.Designation" class="form-label"></label>
                    <span asp-validation-for="Input.Designation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Role</label>
                    <select asp-for="@Model.SelectedRoles" asp-items="Model.AllRoles" name="ddlRole" class="form-select text-black-50" multiple size="5" disabled>
                    </select>

                </div>
                <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary mt-3"><i class="fa-solid fa-floppy-disk me-2"></i> Save</button>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
