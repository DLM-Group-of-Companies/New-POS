@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied!";
}

<header>
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg border-0" style="max-width: 500px; width: 100%;">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-lock fa-4x text-danger"></i>
                </div>
                <h3 class="card-title text-danger mb-3">Access Denied</h3>
                <p class="text-muted mb-4">You do not have permission to access this resource.</p>
                <a href="~/Index" class="btn btn-outline-primary">
                    <i class="fas fa-home me-2"></i>Return to Home
                </a>
            </div>
        </div>
    </div>
</header>

